	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && TEQUIP:1 && TEQUIP:0 == 0 && TEQUIP:2 == 0 && TEQUIP:3 == 0 && TEQUIP:4 == 0 && TEQUIP:5 == 0 && TEQUIP:6 == 0
		PRINTFORMW 
		PRINTFORMW 
		RETURN LOCAL
	ENDIF
ENDIF
;-------------------------------------------------
;着せたとき
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 0
;-------------------------------------------------
IF LOCAL && Y
	;地の文呼び出し(カラー変更対応)
	CALL EVENT_MESSAGE_COLOR
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;貞操帯を付ける
	;記入チェック
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && T:2 == 5
		PRINTFORMW 
		PRINTFORMW 
		RETURN LOCAL
	ENDIF
	
	;-------------------------------------------------
	;水兵服＆スカートにしたとき
	;記入チェック
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && TEQUIP:4 == 1 && TEQUIP:5 == 2
		PRINTFORMW 
		PRINTFORMW 
		RETURN LOCAL
	ENDIF
ENDIF


