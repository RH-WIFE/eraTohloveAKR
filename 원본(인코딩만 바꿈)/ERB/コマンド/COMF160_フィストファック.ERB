;-------------------------------------------------
;フィストファック
;フィスト系コマンド
;-------------------------------------------------
@COM160

PRINTL フィストファック
STR:0 = フィストファック

;-------------------------------------------------
;実行判定処理
;-------------------------------------------------
;拘束されてなくて、体格差がある（主人が小さい）ときのみ実行判定を行う
CALL BUILD
IF !TEQUIP:縄 && S < 0
	;すべての命令に共通の要素を考慮
	;(従順が高いと命令に従いやすいなど)
	CALL COM_ORDER

	;実行判定操作
	CALL KOJO_DENIAL_PLUS

	;合計を表示(50以上で実行)
	PRINT  = 
	PRINTV A

	V = 50
	SIF A < V
		PRINT  < 
	SIF A == V
		PRINT  = 
	SIF A > V
		PRINT  > 
	PRINT 実行値
	PRINTV V

	;実行不可口上/実行判定操作
	SIF A < V
		CALL KOJO_DENIAL

	WAIT

	;実行できない
	SIF A < V
		RETURN 0
ENDIF

CALL KOJO_MESSAGE_COM


;ストッキングびりびりフラグ
IF TEQUIP:特殊２ == 5 || TEQUIP:特殊２ == 6
	TFLAG:55 = 1
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 100
LOSEBASE:気力 += 150

SOURCE:快Ｖ += 250

;陥落済みだと情愛のソース追加
SIF KANRAKU(TARGET)
	SOURCE:情愛 += 50

SOURCE:痛み += 800

SOURCE:露出 += 100
SOURCE:屈従 += 1200
SOURCE:逸脱 += 1200
SOURCE:反発 += 1200


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;フィストなどのVへの大きな苦痛は先に処理しておく
;EXP:Ｖ経験をみる
IF EXP:Ｖ経験 < EXPLV:1
	TIMES SOURCE:痛み , 2.50
	TIMES SOURCE:反発 , 4.00
ELSEIF EXP:Ｖ経験 < EXPLV:2
	TIMES SOURCE:痛み , 2.00
	TIMES SOURCE:反発 , 3.50
ELSEIF EXP:Ｖ経験 < EXPLV:3
	TIMES SOURCE:痛み , 1.80
	TIMES SOURCE:反発 , 3.00
ELSEIF EXP:Ｖ経験 < EXPLV:4
	TIMES SOURCE:痛み , 1.60
	TIMES SOURCE:反発 , 2.50
ELSEIF EXP:Ｖ経験 < EXPLV:5
	TIMES SOURCE:痛み , 1.40
	TIMES SOURCE:反発 , 2.00
ELSEIF EXP:Ｖ経験 >= EXPLV:5
	TIMES SOURCE:痛み , 1.20
	TIMES SOURCE:反発 , 2.00
ENDIF

;EXP:Ｖ拡張経験をみる
IF EXP:Ｖ拡張経験 < EXPLV:1
	TIMES SOURCE:痛み , 1.50
	TIMES SOURCE:反発 , 1.50
ELSEIF EXP:Ｖ拡張経験 < EXPLV:2
	TIMES SOURCE:痛み , 1.20
	TIMES SOURCE:反発 , 1.20
ELSEIF EXP:Ｖ拡張経験 < EXPLV:3
	TIMES SOURCE:痛み , 1.00
	TIMES SOURCE:反発 , 1.00
ELSEIF EXP:Ｖ拡張経験 < EXPLV:4
	TIMES SOURCE:痛み , 0.80
	TIMES SOURCE:反発 , 0.80
ELSEIF EXP:Ｖ拡張経験 < EXPLV:5
	TIMES SOURCE:痛み , 0.60
	TIMES SOURCE:反発 , 0.60
ELSEIF EXP:Ｖ拡張経験 >= EXPLV:5
	TIMES SOURCE:痛み , 0.50
	TIMES SOURCE:反発 , 0.50
ENDIF

;PALAM:潤滑をみる
IF PALAM:潤滑 < PALAMLV:1
	TIMES SOURCE:痛み , 3.00
	TIMES SOURCE:反発 , 2.00
ELSEIF PALAM:潤滑 < PALAMLV:2
	TIMES SOURCE:痛み , 2.50
	TIMES SOURCE:反発 , 1.50
ELSEIF PALAM:潤滑 < PALAMLV:3
	TIMES SOURCE:痛み , 2.00
	TIMES SOURCE:反発 , 1.20
ELSEIF PALAM:潤滑 < PALAMLV:4
	TIMES SOURCE:痛み , 1.50
ELSEIF PALAM:潤滑 >= PALAMLV:4
	TIMES SOURCE:痛み , 1.00
ENDIF

;調教者が小人体型
SIF TALENT:PLAYER:小人体型
	TIMES SOURCE:痛み , 0.80



;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
CALL COM_STAIN

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;Ｖ経験
EXP:Ｖ経験 += 25
PRINTL Ｖ経験＋２５

;Ｖ拡張経験
IF EXP:Ｖ拡張経験 == 0
	EXP:異常経験 += 1
	PRINTL Ｖ拡張初経験で異常経験＋１
ENDIF

EXP:Ｖ拡張経験 += 5
PRINTL Ｖ拡張経験＋５

;ゲイ経験とか加算
CALL COM_EXP(1)

;依存度ベクトル
TFLAG:33 = 5

;依存度補正値(服従で1、隷属で2）
IF TALENT:服従 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:隷属 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1


