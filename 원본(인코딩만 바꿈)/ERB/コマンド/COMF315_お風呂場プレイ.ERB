;-------------------------------------------------
;お風呂場プレイ
;シチュエーション別コマンド
;-------------------------------------------------
@COM315

PRINTL お風呂場プレイ
STR:0 = お風呂場プレイ
CALL KOJO_MESSAGE_COM

;着脱の処理　終了時はソース、経験の加算は行わない
IF TEQUIP:お風呂場 == 1
	TEQUIP:お風呂場 = 0
	;シャワーも外す
	TEQUIP:シャワー = 0
	;汚れ消す
	CALL COM_STAIN
	RETURN 1
ELSE
	TEQUIP:お風呂場 = 1
ENDIF

;移動時に尿・便存在をクリア
TFLAG:66 = 0
TFLAG:57 = 0


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 0
LOSEBASE:気力 += 10

SOURCE:恐れ += 100
SOURCE:露出 += 200
SOURCE:逸脱 += 50
SOURCE:反発 += 100


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 50


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;依存度ベクトル
TFLAG:33 = 2

RETURN 1


;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM315
;お風呂場プレイ

PRINTL ＜お風呂場プレイ中＞

LOSEBASE:体力 += 0
LOSEBASE:気力 += 0

SOURCE:恐れ += 50
SOURCE:恭順 += 100
SOURCE:反発 += 50


RETURN 1

