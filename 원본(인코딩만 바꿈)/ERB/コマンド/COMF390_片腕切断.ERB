;-------------------------------------------------
;片腕切断
;猟奇系コマンド
;-------------------------------------------------
@COM390

PRINTL 片腕切断
STR:0 = 片腕切断
CALL KOJO_MESSAGE_COM


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
LOSEBASE:体力 += 700
LOSEBASE:気力 += 500

;痛み、恐れ、屈従、逸脱、反発
SOURCE:痛み += 6000
SOURCE:恐れ += 6000
SOURCE:屈従 += 2500
SOURCE:逸脱 += 3000
SOURCE:反発 += 4000
IF TALENT:片腕欠損
	PRINTFORMW ＜%CALLNAME%は両腕を失いました＞
	TALENT:片腕欠損 = 0
	IF TALENT:両足欠損
		TALENT:両足欠損 = 0
		TALENT:達磨 = 1
	ELSE
		TALENT:両腕欠損 = 1
	ENDIF
ELSE
	PRINTFORMW ＜%CALLNAME%は片腕を失いました＞
	TALENT:片腕欠損 = 1
ENDIF

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;親愛・服従・隷属の場合反発減、恭順のソース追加
IF TALENT:親愛 || TALENT:服従 || TALENT:隷属
	TIMES SOURCE:反発 , 0.10
	SOURCE:恭順 += 3000
ENDIF
;マゾっ気
IF ABL:マゾっ気 == 0
	TIMES SOURCE:逸脱 , 2.00
ELSEIF ABL:マゾっ気 < 3
	TIMES SOURCE:逸脱 , 1.00
ELSEIF ABL:マゾっ気 < 5
	TIMES SOURCE:逸脱 , 0.70
ELSEIF ABL:マゾっ気 < 7
	TIMES SOURCE:逸脱 , 0.50
ELSEIF ABL:マゾっ気 < 9
	TIMES SOURCE:逸脱 , 0.30
ELSE
	TIMES SOURCE:逸脱 , 0.10
ENDIF

;苦痛のパラメータによる苦痛のソース増加は先に処理しておく
IF PALAM:苦痛 < PALAMLV:1
	TIMES SOURCE:痛み , 1.00
ELSEIF PALAM:苦痛 < PALAMLV:2
	TIMES SOURCE:痛み , 1.50
ELSEIF PALAM:苦痛 < PALAMLV:3
	TIMES SOURCE:痛み , 2.00
ELSEIF PALAM:苦痛 < PALAMLV:4
	TIMES SOURCE:痛み , 2.50
ELSEIF PALAM:苦痛 >= PALAMLV:4
	TIMES SOURCE:痛み , 3.00
ENDIF


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;異常経験
IF EXP:切断経験 < 9
	EXP:異常経験 += 1
	PRINTL 異常経験＋１
ENDIF

;切断経験
EXP:切断経験 += 1
PRINTL 切断経験＋１

;ゲイ経験とか加算
CALL COM_EXP(5)

;依存度ベクトル
TFLAG:33 = 5

;依存度補正値(恋慕・服従で1、親愛・隷属で2）
IF TALENT:恋慕 || TALENT:服従
	TFLAG:30 += 1
ELSEIF TALENT:親愛 || TALENT:隷属
	TFLAG:30 += 2
ENDIF


RETURN 1


