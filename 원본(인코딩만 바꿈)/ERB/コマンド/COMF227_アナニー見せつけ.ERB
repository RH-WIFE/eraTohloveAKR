;-------------------------------------------------
;アナニー見せつけ
;見せつけ系コマンド
;-------------------------------------------------
@COM227

PRINTL アナニー見せつけ
STR:0 = アナニー見せつけ

CALL KOJO_MESSAGE_COM


;-------------------------------------------------
;射精ゲージチェック
;-------------------------------------------------
B = 500

CALL SHOOT_GAUGE_CHECK_MT

;再装填処理中は射精ゲージは20分の1に
SIF CFLAG:PLAYER:9 > 0
	B /= 20

SIF PENIS(PLAYER)
	BASE:PLAYER:射精 += B

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 0
LOSEBASE:気力 += 50

SOURCE:液体 =50
SOURCE:欲情 += 150
SOURCE:屈従 += 750
SOURCE:逸脱 += 500
SOURCE:反発 += 400

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 400


;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK(PLAYER,1)

;射精時の処理
IF E >= 1
	;射精先タイプの設定
	TFLAG:703 = 0
	;射精先選択の可・不可
	;奴隷が攻め、かつ主人が受けかオメガだと選択不可
	IF TALENT:攻め && (TALENT:PLAYER:受け || TALENT:MASTER:オメガ)
		TFLAG:704 = 0
	;奴隷の従順と奉仕精神足して７以上、もしくは精液中毒有なら選択可
	ELSEIF ((ABL:従順+ABL:奉仕精神) >= 7) || ABL:精液中毒
		TFLAG:704 = 1
	ELSE
		TFLAG:704 = 0
	ENDIF
	;汎用的な処理はこの関数で行う
	;（射精ゲージの再計算や射精経験の上昇と共通部分の表示）
	CALL SAMEN_SHOOT
ENDIF

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
CALL COM_STAIN


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;依存度ベクトル
TFLAG:33 = 3

EXP:PLAYER:Ａ経験 += 1
PRINTFORML %CALLNAME:PLAYER%のＡ経験＋１


RETURN 1


