;-------------------------------------------------
;ザーメンキス
;食ザー系コマンド
;-------------------------------------------------
@COM412

PRINTL ザーメンキス
STR:0 = ザーメンキス

CALL KOJO_MESSAGE_COM

;陥落してれば、実行者が奴隷であるフラグ
SIF KANRAKU(TARGET)
	TFLAG:28 = 1

;-------------------------------------------------
;射精ゲージチェック
;-------------------------------------------------
B = 50

CALL SHOOT_GAUGE_CHECK_MT

;再装填処理中は射精ゲージは20分の1に
SIF CFLAG:PLAYER:9 > 0
	B /= 20

SIF PENIS(PLAYER)
	BASE:PLAYER:射精 += B

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 0
LOSEBASE:気力 += 80

SOURCE:情愛 += 100

;スキンシップ好きだと情愛のソース追加
SIF TALENT:スキンシップ好き
	SOURCE:情愛 += 50
;恋慕系陥落済みだと情愛のソース追加
SIF TALENT:恋慕 || TALENT:親愛
	TIMES SOURCE:情愛 , 1.50

SOURCE:性行動 += 420
SOURCE:達成感 += 150
SOURCE:屈従 += 1200
SOURCE:逸脱 += 500
SOURCE:反発 += 500

;上のほうで計算した汚れデータ
SOURCE:不潔 += Y*40 + 100


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 300

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
CALL COM_STAIN


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;ゲイ経験とか加算
CALL COM_EXP(5)

;愛情経験
IF (TALENT:恋慕 == 1 || TALENT:親愛 == 1) && ASSIPLAY == 0
	PRINTS EXPNAME:23
	PRINTL +1
	EXP:愛情経験 += 1
ENDIF

;奴隷が猫舌持ちの場合は、調教者に嗜虐快楽経験を追加
IF TALENT:猫舌
	EXP:嗜虐快楽経験 += 1
	PRINTFORML %EXPNAME:32%＋１
ENDIF

;奉仕快楽フラグ
TFLAG:100 = 1

;依存度ベクトル
TFLAG:33 = 1

;依存度補正値(恋慕で1、親愛で2）
IF TALENT:恋慕 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:親愛 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF

RETURN 1


