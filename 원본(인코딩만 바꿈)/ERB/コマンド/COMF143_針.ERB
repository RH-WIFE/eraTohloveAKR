;-------------------------------------------------
;針を刺す
;ＳＭ系コマンド
;-------------------------------------------------
@COM143

PRINTL 針を刺す
STR:0 = 針を刺す
CALL KOJO_MESSAGE_COM


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;爪
IF TFLAG:56 == 3 && TEQUIP:地下室
	;消費体力、気力
	LOSEBASE:体力 += 350
	LOSEBASE:気力 += 500
	
	SOURCE:痛み += 6000
;性器
ELSEIF TFLAG:56 == 1
	;消費体力、気力
	LOSEBASE:体力 += 200
	LOSEBASE:気力 += 350
	
	SOURCE:痛み += 6000
	SOURCE:快Ｃ += 100
;乳首
ELSEIF TFLAG:56 == 2
	;消費体力、気力
	LOSEBASE:体力 += 100
	LOSEBASE:気力 += 100
	
	SOURCE:痛み += 2500
	SOURCE:快Ｂ += 100
ELSE
	;消費体力、気力
	LOSEBASE:体力 += 50
	LOSEBASE:気力 += 50
	
	SOURCE:痛み += 1500
ENDIF

SOURCE:恐れ += 2000
;地下室にいると恐れのソース追加
SIF TEQUIP:地下室
	TIMES SOURCE:恐れ , 1.50

SOURCE:逸脱 += 500
SOURCE:反発 += 1200

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;苦痛のパラメータによる苦痛のソース増加は先に処理しておく
IF PALAM:苦痛 < PALAMLV:1
	TIMES SOURCE:痛み , 1.00
ELSEIF PALAM:苦痛 < PALAMLV:2
	TIMES SOURCE:痛み , 1.50
ELSEIF PALAM:苦痛 < PALAMLV:3
	TIMES SOURCE:痛み , 2.00
ELSEIF PALAM:苦痛 < PALAMLV:4
	TIMES SOURCE:痛み , 2.50
ELSEIF PALAM:苦痛 >= PALAMLV:4
	TIMES SOURCE:痛み , 3.00
ENDIF


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;ゲイ経験とか加算
CALL COM_EXP(2)

;依存度ベクトル
TFLAG:33 = 5

;依存度補正値(服従で1、隷属で2）
IF TALENT:服従 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:隷属 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1




