;-------------------------------------------------
;羞恥プレイ
;シチュエーション別コマンド
;-------------------------------------------------
@COM313

PRINTL 羞恥プレイ
STR:0 = 羞恥プレイ
CALL KOJO_MESSAGE_COM

;着脱の処理　終了時はソース、経験の加算は行わない
IF TEQUIP:羞恥プレイ == 1
	TEQUIP:羞恥プレイ = 0
ELSE
	TEQUIP:羞恥プレイ = 1
	TFLAG:56 = 0
ENDIF


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 0
LOSEBASE:気力 += 50

SOURCE:恐れ += 500
SOURCE:屈従 += 300
SOURCE:逸脱 += 100
SOURCE:反発 += 500


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 500

;苦痛を伴わないマゾっ気及びマゾの処理は先にしておく
;マゾっ気を見る
A = 700
IF ABL:マゾっ気 == 0
	TIMES A , 0.80
	SOURCE:液体 += 0
	SOURCE:欲情 += 0
ELSEIF ABL:マゾっ気 == 1
	TIMES A , 1.00
	SOURCE:液体 += 20
	SOURCE:欲情 += 30
ELSEIF ABL:マゾっ気 == 2
	TIMES A , 1.20
	SOURCE:液体 += 40
	SOURCE:欲情 += 70
ELSEIF ABL:マゾっ気 == 3
	TIMES A , 1.40
	SOURCE:液体 += 70
	SOURCE:欲情 += 120
ELSEIF ABL:マゾっ気 == 4
	TIMES A , 1.50
	SOURCE:液体 += 110
	SOURCE:欲情 += 180
ELSEIF ABL:マゾっ気 == 5
	TIMES A , 1.70
	SOURCE:液体 += 150
	SOURCE:欲情 += 250
ELSEIF ABL:マゾっ気 == 6
	TIMES A , 1.90
	SOURCE:液体 += 200
	SOURCE:欲情 += 300
ELSEIF ABL:マゾっ気 == 7
	TIMES A , 2.10
	SOURCE:液体 += 250
	SOURCE:欲情 += 350
ELSEIF ABL:マゾっ気 == 8
	TIMES A , 2.30
	SOURCE:液体 += 300
	SOURCE:欲情 += 400
ELSEIF ABL:マゾっ気 == 9
	TIMES A , 2.50
	SOURCE:液体 += 350
	SOURCE:欲情 += 450
ELSEIF ABL:マゾっ気 >= 10
	TIMES A , 3.00
	SOURCE:液体 += 500
	SOURCE:欲情 += 500
ENDIF
SOURCE:露出 += A


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;依存度ベクトル
TFLAG:33 = 3


RETURN 1


