;-------------------------------------------------
;利尿剤
;薬品系コマンド
;-------------------------------------------------
@COM302

IF TEQUIP:触手
	PRINTL 触手利尿剤
	STR:0 = 触手利尿剤
ELSE
	PRINTL 利尿剤
	STR:0 = 利尿剤
ENDIF

CALL KOJO_MESSAGE_COM


;使ったアイテム減らす
SIF TEQUIP:触手 == 0
	ITEM:42 -= 1

TEQUIP:利尿剤 = 1



;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
;調教者が調合知識を持っていれば消費を抑えられる
IF TALENT:PLAYER:調合知識
	LOSEBASE:体力 += 0
	LOSEBASE:気力 += 10
ELSE
	LOSEBASE:体力 += 10
	LOSEBASE:気力 += 50
ENDIF

SOURCE:逸脱 += 800
;利尿剤効果で軽く変動
SOURCE:反発 += 150

BASE:尿意 += 60

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;ゲイ経験とか加算
CALL COM_EXP(1)

;依存度ベクトル
TFLAG:33 = 0

RETURN 1

