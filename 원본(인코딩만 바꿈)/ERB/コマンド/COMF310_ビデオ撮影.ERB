;-------------------------------------------------
;ビデオ撮影
;シチュエーション別コマンド
;-------------------------------------------------
@COM310
;カウントは10回とする
K = 10

;撮影者の処理
$INPUT_LOOP
IF TEQUIP:ビデオカメラ == 0 && ASSI >= 0
	PRINTL 撮影者を選択してください　途中変更はできません
	PRINTL （撮影者を変更する場合、一度撮影を終了してください）
	PRINTL 
	PRINTFORML [0] %CALLNAME:MASTER%
	PRINTFORML [1] %CALLNAME:ASSI%
	PRINTL 
	INPUT
	IF RESULT == 0
		FLAG:22 = 1
		PRINTFORML 撮影者は%CALLNAME:MASTER%です
	ELSEIF RESULT == 1 && ASSI > -1
		FLAG:22 = 2
		PRINTFORML 撮影者は%CALLNAME:ASSI%です
	ELSE
		GOTO INPUT_LOOP
	ENDIF
ELSEIF TEQUIP:ビデオカメラ == 0
	FLAG:22 = 1
	PRINTFORML 撮影者は%CALLNAME:MASTER%です
ENDIF

PRINTL ビデオ撮影
STR:0 = ビデオ撮影
CALL KOJO_MESSAGE_COM


;着脱の処理
IF TEQUIP:ビデオカメラ
;ビデオ撮影がされていれば終了させる
;テープは終了時に数を減らす、さらにこれまでの値段と経験を加算する
	TEQUIP:ビデオカメラ = 0
	CALL PRICE_VIDEO
	PRINTW ★★★ビデオ撮影を終了します★★★
ELSE
;ビデオ撮影してなければ初期化して開始
;TODO 起動条件を作成する
	TEQUIP:ビデオカメラ = 1
	TFLAG:70 = 0
	REPEAT K
		S = COUNT + 11
		FLAG:S = 0
	REND
	PRINTW ★★★ビデオ撮影を開始します★★★
ENDIF

;使ったアイテム減らす
ITEM:43 -= 1

TEQUIP:ビデオカメラ = 1


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;依存度ベクトル
TFLAG:33 = 0


RETURN 1



;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM310
;撮影開始時はカウントに入れない
IF TFLAG:70 == 0
	TFLAG:70 += 1
	RETURN 1
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 0
LOSEBASE:気力 += 30

SOURCE:恐れ += 1000
SOURCE:逸脱 += 400
SOURCE:反発 += 700


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 700

;苦痛を伴わないマゾっ気及びマゾの処理は先にしておく
;マゾっ気を見る
A = 1000
IF ABL:マゾっ気 == 0
	TIMES A , 0.80
	SOURCE:液体 += 0
	SOURCE:欲情 += 0
ELSEIF ABL:マゾっ気 == 1
	TIMES A , 1.00
	SOURCE:液体 += 20
	SOURCE:欲情 += 30
ELSEIF ABL:マゾっ気 == 2
	TIMES A , 1.20
	SOURCE:液体 += 40
	SOURCE:欲情 += 70
ELSEIF ABL:マゾっ気 == 3
	TIMES A , 1.40
	SOURCE:液体 += 70
	SOURCE:欲情 += 120
ELSEIF ABL:マゾっ気 == 4
	TIMES A , 1.50
	SOURCE:液体 += 110
	SOURCE:欲情 += 180
ELSEIF ABL:マゾっ気 == 5
	TIMES A , 1.70
	SOURCE:液体 += 150
	SOURCE:欲情 += 250
ELSEIF ABL:マゾっ気 == 6
	TIMES A , 1.90
	SOURCE:液体 += 200
	SOURCE:欲情 += 300
ELSEIF ABL:マゾっ気 == 7
	TIMES A , 2.10
	SOURCE:液体 += 250
	SOURCE:欲情 += 350
ELSEIF ABL:マゾっ気 == 8
	TIMES A , 2.30
	SOURCE:液体 += 300
	SOURCE:欲情 += 400
ELSEIF ABL:マゾっ気 == 9
	TIMES A , 2.50
	SOURCE:液体 += 350
	SOURCE:欲情 += 450
ELSEIF ABL:マゾっ気 >= 10
	TIMES A , 3.00
	SOURCE:液体 += 500
	SOURCE:欲情 += 500
ENDIF
SOURCE:露出 += A


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
IF FLAG:22 == 1
	EXP:MASTER:撮影経験 += 1
	PRINTL 主人撮影経験＋１
ELSEIF FLAG:22 == 2
	EXP:ASSI:撮影経験 += 1
	PRINTL 助手撮影経験＋１
ENDIF
EXP:被写経験 += 1
PRINTL 奴隷被写経験＋１

;依存度ベクトルを強制的に変更
SIF TFLAG:33 == 1 || TFLAG:33 == 2
	TFLAG:33 = 3

;依存度補正値(服従で1、隷属で2　強制変更なのでリセット）
IF TALENT:服従 && ASSIPLAY == 0
	TFLAG:30 = 1
ELSEIF TALENT:隷属 && ASSIPLAY == 0
	TFLAG:30 = 2
ENDIF


;-------------------------------------------------
;ビデオの処理
;-------------------------------------------------
;カウントは10回とします
K = 10
;コマンドの派生フラグが立っていればそちらを、いなければSELECTCOMを入れる
IF TFLAG:90
	L = TFLAG:90
ELSE
	L = SELECTCOM
ENDIF

;テープ残量がなくなると強制的にEQUIPフラグを外す、さらにビデオの値段と経験の処理をする
IF TFLAG:70 <= 0 || TFLAG:70 >= K
	TEQUIP:ビデオカメラ = 0
	;撮影内容の保存
	S = TFLAG:70+10
	FLAG:S = L
	TFLAG:70 += 1
	CALL PRICE_VIDEO
	PRINTL ＜テープの残量がなくなりました　ビデオ撮影を終了します＞
	RETURN 1
ELSE
	PRINTFORML ＜ビデオ撮影中{TFLAG:70}/{K}＞
ENDIF

;撮影内容の保存
S = TFLAG:70+10
FLAG:S = L
TFLAG:70 += 1


RETURN 1



