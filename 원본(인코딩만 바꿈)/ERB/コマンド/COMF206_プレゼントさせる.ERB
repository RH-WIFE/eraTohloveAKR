;-------------------------------------------------
;プレゼントさせる
;コミュニケーション系コマンド
;-------------------------------------------------
@COM206

PRINTL プレゼントさせる
STR:0 = プレゼントさせる

CALL KOJO_MESSAGE_COM


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;陥落済み
IF TALENT:恋慕 || TALENT:淫乱 || TALENT:服従 || TALENT:親愛 || TALENT:娼婦 || TALENT:隷属
	;消費体力、気力
	LOSEBASE:体力 += 10
	LOSEBASE:気力 += 30
	
	;恋慕、親愛
	IF TALENT:恋慕 || TALENT:親愛
		SOURCE:中毒充足 += 60
		SOURCE:恭順 += 250
		SOURCE:逸脱 += 50
	;淫乱、娼婦
	ELSEIF TALENT:淫乱 || TALENT:娼婦
		SOURCE:情愛 += 60
		SOURCE:性行動 += 250
		SOURCE:中毒充足 += 50
		SOURCE:欲情 += 200
		SOURCE:逸脱 += 80
	;服従、隷属
	ELSEIF TALENT:服従 || TALENT:隷属
		SOURCE:情愛 += 60
		SOURCE:性行動 += 250
		SOURCE:恐れ += 50
		SOURCE:中毒充足 += 200
		SOURCE:露出 += 80
		SOURCE:屈従 += 200
		SOURCE:逸脱 += 80
		SOURCE:反発 += 80
	ENDIF
ELSE
	;消費体力、気力
	LOSEBASE:体力 += 10
	LOSEBASE:気力 += 50
	
	SOURCE:恐れ += 60
	SOURCE:鬱屈 += 250
	SOURCE:反発 += 50
ENDIF


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;愛情経験
IF (TALENT:恋慕 == 1 || TALENT:親愛 == 1) && ASSIPLAY == 0
	PRINTS EXPNAME:23
	PRINTL +1
	EXP:愛情経験 += 1
ENDIF

;依存度ベクトル
TFLAG:33 = 0

;依存度補正値(恋慕で1、親愛で2）
IF TALENT:恋慕
	TFLAG:30 += 1
ELSEIF TALENT:親愛
	TFLAG:30 += 2
ENDIF

RETURN 1




