;-------------------------------------------------
;射精止め
;ＳＭ-拘束系コマンド
;-------------------------------------------------
@COM134

PRINTL 射精止め
STR:0 = 射精止め
CALL KOJO_MESSAGE_COM

;リボンの着脱
IF TEQUIP:射精止め
	;せき止めた精液が射精ゲージに加算される
	BASE:射精 += EX:2 * MAXBASE:射精
	TEQUIP:射精止め = 0
ELSE
	PRINTL 緊縛経験＋1
	EXP:緊縛経験 += 1
	TEQUIP:射精止め = 1
ENDIF

;ストッキングびりびりフラグ
IF TEQUIP:特殊２ == 5 || TEQUIP:特殊２ == 6
	TFLAG:55 = 1
ENDIF



;-------------------------------------------------
;ソースの計算
;-------------------------------------------------
LOSEBASE:体力 += 5
LOSEBASE:気力 += 30

SOURCE:快Ｃ += 50

SOURCE:痛み += 100

SOURCE:露出 += 100
SOURCE:屈従 += 250
SOURCE:逸脱 += 500


;PALAM:Ｃ感覚をみる
IF PALAM:快Ｃ < PALAMLV:1
	SOURCE:痛み += 100
ELSEIF PALAM:快Ｃ < PALAMLV:2
	SOURCE:痛み += 110
ELSEIF PALAM:快Ｃ < PALAMLV:3
	SOURCE:痛み += 120
ELSEIF PALAM:快Ｃ < PALAMLV:4
	SOURCE:痛み += 130
ELSE
	SOURCE:痛み += 140
ENDIF

;PALAM:欲情をみる
IF PALAM:欲情 < PALAMLV:1
	SOURCE:欲情 += 100
ELSEIF PALAM:欲情 < PALAMLV:2
	SOURCE:欲情 += 110
ELSEIF PALAM:欲情 < PALAMLV:3
	SOURCE:欲情 += 120
ELSEIF PALAM:欲情 < PALAMLV:4
	SOURCE:欲情 += 130
ELSE
	SOURCE:欲情 += 140
ENDIF

;ABL:マゾっ気をみる
IF ABL:ゲイ中毒 == 0
	TIMES SOURCE:欲情 , 0.80
ELSEIF ABL:マゾっ気 == 1
	TIMES SOURCE:欲情 , 1.00
ELSEIF ABL:マゾっ気 == 2
	TIMES SOURCE:欲情 , 1.30
ELSEIF ABL:マゾっ気 == 3
	TIMES SOURCE:欲情 , 1.60
ELSEIF ABL:マゾっ気 == 4
	TIMES SOURCE:欲情 , 2.00
ELSE
	TIMES SOURCE:欲情 , 3.00
ENDIF

;倒錯的
SIF TALENT:倒錯的
	TIMES SOURCE:欲情 , 2.00
;調教者がサド、サドっ気3以上
SIF TALENT:PLAYER:サド || ABL:PLAYER:10 > 2
	TIMES SOURCE:反発 , 1.20


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;依存度ベクトル
TFLAG:33 = 3

;依存度補正値(服従で1、隷属で2）
IF TALENT:服従 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:隷属 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF

RETURN 1



