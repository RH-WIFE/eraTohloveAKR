;-------------------------------------------------
;罵倒する
;ＳＭ-ハード系コマンド
;-------------------------------------------------
@COM152

PRINTL 罵倒する
STR:0 = 罵倒する
CALL KOJO_MESSAGE_COM


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 0
LOSEBASE:気力 += 30

SOURCE:恐れ += 700
SOURCE:屈従 += 100
SOURCE:逸脱 += 400
SOURCE:反発 += 500


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;苦痛を伴わないマゾっ気及びマゾの処理は先にしておく
;マゾっ気を見る
IF ABL:マゾっ気 == 0
	TIMES SOURCE:屈従 , 0.80
	SOURCE:液体 += 0
	SOURCE:欲情 += 0
ELSEIF ABL:マゾっ気 == 1
	TIMES SOURCE:屈従 , 1.00
	SOURCE:液体 += 20
	SOURCE:欲情 += 30
	SOURCE:中毒充足 += 20
ELSEIF ABL:マゾっ気 == 2
	TIMES SOURCE:屈従 , 1.20
	SOURCE:液体 += 40
	SOURCE:欲情 += 70
	SOURCE:中毒充足 += 50
ELSEIF ABL:マゾっ気 == 3
	TIMES SOURCE:屈従 , 1.40
	SOURCE:液体 += 70
	SOURCE:欲情 += 120
	SOURCE:中毒充足 += 90
ELSEIF ABL:マゾっ気 == 4
	TIMES SOURCE:屈従 , 1.50
	SOURCE:液体 += 110
	SOURCE:欲情 += 180
	SOURCE:中毒充足 += 120
ELSEIF ABL:マゾっ気 == 5
	TIMES SOURCE:屈従 , 1.70
	SOURCE:液体 += 150
	SOURCE:欲情 += 250
	SOURCE:中毒充足 += 150
ELSEIF ABL:マゾっ気 == 6
	TIMES SOURCE:屈従 , 1.90
	SOURCE:液体 += 200
	SOURCE:欲情 += 300
	SOURCE:中毒充足 += 200
ELSEIF ABL:マゾっ気 == 7
	TIMES SOURCE:屈従 , 2.10
	SOURCE:液体 += 250
	SOURCE:欲情 += 350
	SOURCE:中毒充足 += 250
ELSEIF ABL:マゾっ気 == 8
	TIMES SOURCE:屈従 , 2.30
	SOURCE:液体 += 300
	SOURCE:欲情 += 400
	SOURCE:中毒充足 += 300
ELSEIF ABL:マゾっ気 == 9
	TIMES SOURCE:屈従 , 2.50
	SOURCE:液体 += 350
	SOURCE:欲情 += 450
	SOURCE:中毒充足 += 400
ELSEIF ABL:マゾっ気 >= 10
	TIMES SOURCE:屈従 , 3.00
	SOURCE:液体 += 500
	SOURCE:欲情 += 500
	SOURCE:中毒充足 += 500
ENDIF

;マゾを見る
IF TALENT:マゾ
	TIMES SOURCE:屈従 , 2.50
	TIMES SOURCE:液体 , 1.20
	TIMES SOURCE:欲情 , 1.20
ENDIF

;TALENT:反抗的をみる
IF TALENT:反抗的 == 1
	TIMES SOURCE:中毒充足 , 0.75
	TIMES SOURCE:屈従 , 0.75
	TIMES SOURCE:反発 , 1.50
ENDIF

;TALENT:気丈をみる
IF TALENT:気丈 == 1
	TIMES SOURCE:中毒充足 , 0.75
	TIMES SOURCE:屈従 , 0.75
	TIMES SOURCE:反発 , 2.50
ENDIF

;TALENT:プライド高いをみる
IF TALENT:プライド高い == 1
	TIMES SOURCE:中毒充足 , 1.50
	TIMES SOURCE:屈従 , 1.50
	TIMES SOURCE:反発 , 2.00
ENDIF

;TALENT:生意気をみる
IF TALENT:生意気 == 1
	TIMES SOURCE:中毒充足 , 0.80
	TIMES SOURCE:屈従 , 0.80
	TIMES SOURCE:反発 , 1.80
ENDIF

;TALENT:プライド低いをみる
IF TALENT:プライド低い == 1
	TIMES SOURCE:中毒充足 , 1.50
	TIMES SOURCE:屈従 , 0.75
	TIMES SOURCE:反発 , 0.75
ENDIF

;縄で緊縛中のとき効果上昇
SIF TEQUIP:縄
	TIMES SOURCE:屈従 , 1.50
;ボールギャグ装着中のとき効果上昇
SIF TEQUIP:ボールギャグ
	TIMES SOURCE:屈従 , 1.75



;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;ゲイ経験とか加算
CALL COM_EXP(1)

;愛情経験(減少）
IF (TALENT:恋慕 == 1 || TALENT:親愛 == 1) && ASSIPLAY == 0 && EXP:愛情経験 > 0
	PRINTS EXPNAME:23
	PRINTL -1
	EXP:愛情経験 -= 1
ENDIF

;依存度ベクトル
TFLAG:33 = 5

;依存度補正値(服従で1、隷属で2）
IF TALENT:服従 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:隷属 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1



