;-------------------------------------------------
;媚薬
;薬品系コマンド
;-------------------------------------------------
@COM301

IF TEQUIP:触手
	PRINTL 触手媚薬
	STR:0 = 触手媚薬
ELSE
	PRINTL 媚薬
	STR:0 = 媚薬
ENDIF

CALL KOJO_MESSAGE_COM


;使ったアイテム減らす
SIF TEQUIP:触手 == 0
	ITEM:媚薬 -= 1

TEQUIP:媚薬 = 1


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
;調教者が調合知識を持っていれば消費を抑えられる
IF TALENT:PLAYER:調合知識
	LOSEBASE:体力 += 0
	LOSEBASE:気力 += 10
ELSE
	LOSEBASE:体力 += 10
	LOSEBASE:気力 += 50
ENDIF

;媚薬効果で欲情のアップが2倍になるので実際には+5000
UP:欲情 = 2500
SOURCE:逸脱 += 1000


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;ゲイ経験とか加算
CALL COM_EXP(1)

;依存度ベクトル
TFLAG:33 = 0

RETURN 1

