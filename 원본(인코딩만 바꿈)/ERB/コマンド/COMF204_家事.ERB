@COM204

PRINTL 家事
STR:0 = 家事
CALL KOJO_MESSAGE_COM


;実行者が奴隷であるフラグ
TFLAG:28 = 1

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 50
LOSEBASE:気力 += 20

SOURCE:性行動 += 500
SOURCE:達成感 += 500
SOURCE:反発 += 100


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
IF (TALENT:恋慕 || TALENT:親愛) && TEQUIP:エプロン
	PRINTL 家事経験＋3
	EXP:家事経験 += 3
	PRINTFORML %EXPNAME:23%＋3
	EXP:愛情経験 += 3
ELSE
	PRINTL 家事経験＋1
	EXP:家事経験 += 1
	PRINTFORML %EXPNAME:23%＋1
	EXP:愛情経験 += 1
ENDIF

;依存度ベクトル
TFLAG:33 = 1

;依存度補正値(恋慕で1、親愛で2）
IF TALENT:恋慕 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:親愛 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1

