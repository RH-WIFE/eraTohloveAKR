;-------------------------------------------------
;アイマスク
;ＳＭ-拘束系コマンド
;-------------------------------------------------
@COM131

PRINTL アイマスク
STR:0 = アイマスク
CALL KOJO_MESSAGE_COM


;着脱の処理
IF TEQUIP:アイマスク == 0 || TEQUIP:特殊３ != 2
	TEQUIP:アイマスク = 1
	TEQUIP:特殊３ = 2
ELSE
	TEQUIP:アイマスク = 0
	TEQUIP:特殊３ = 0
ENDIF


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 0
LOSEBASE:気力 += 20

SOURCE:恐れ += 600
;地下室にいると恐れのソース追加
SIF TEQUIP:地下室
	TIMES SOURCE:恐れ , 1.50

SOURCE:露出 += 100
SOURCE:逸脱 += 300
SOURCE:反発 += 600

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;緊縛経験が高いと消費減少
IF EXP:緊縛経験 < EXPLV:3
	TIMES LOSEBASE:気力 , 1.00
ELSEIF EXP:緊縛経験 < EXPLV:4
	TIMES LOSEBASE:気力 , 0.90
ELSE
	TIMES LOSEBASE:気力 , 0.70
ENDIF


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:緊縛経験 += 2
PRINTL 緊縛経験＋２

;ゲイ経験とか加算
CALL COM_EXP(1)

;依存度ベクトル
TFLAG:33 = 3

;依存度補正値(服従で1、隷属で2）
IF TALENT:服従 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:隷属 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1



;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM131
PRINTL ＜アイマスク装着中＞

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
LOSEBASE:体力 += 0
LOSEBASE:気力 += 30

SOURCE:恐れ += 150
SOURCE:露出 += 50
SOURCE:逸脱 += 150
SOURCE:反発 += 300

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;緊縛経験が高いと消費減少
A = 40
IF EXP:緊縛経験 < EXPLV:3
	TIMES A , 1.00
ELSEIF EXP:緊縛経験 < EXPLV:4
	TIMES A , 0.90
ELSE
	TIMES A , 0.70
ENDIF
LOSEBASE:気力 += A

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:緊縛経験 += 1
PRINTL 緊縛経験＋１

RETURN 1


