;-------------------------------------------------
;アナルバイブ
;Ａ系調教コマンド
;-------------------------------------------------
@COM54

IF TEQUIP:触手
	PRINTL 触手アナル挿入
	STR:0 = 触手アナル挿入
	SELECTCOM = 345
ELSE
	PRINTL アナルバイブ
	STR:0 = アナルバイブ
ENDIF

CALL KOJO_MESSAGE_COM

;ストッキングびりびりフラグ
IF TEQUIP:特殊２ == 5 || TEQUIP:特殊２ == 6
	TFLAG:55 = 1
ENDIF

;着脱の処理
IF TEQUIP:アナルバイブ == 0
	TEQUIP:アナルバイブ = 1
ELSE
	TEQUIP:アナルバイブ = 0
ENDIF


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 20
LOSEBASE:気力 += 80

SOURCE:快Ａ += 200

SOURCE:痛み += 250
;地下室にいると苦痛のソース追加
SIF TEQUIP:地下室
	SOURCE:痛み += 250

SOURCE:露出 += 50
SOURCE:屈従 += 50
SOURCE:逸脱 += 50

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 70

;Aへの苦痛は先に処理しておく
;EXP:Ａ経験をみる
IF EXP:Ａ経験 < EXPLV:1
	TIMES SOURCE:痛み , 3.00
	TIMES SOURCE:反発 , 3.00
ELSEIF EXP:Ａ経験 < EXPLV:2
	TIMES SOURCE:痛み , 1.20
	TIMES SOURCE:反発 , 2.00
ELSEIF EXP:Ａ経験 < EXPLV:3
	TIMES SOURCE:痛み , 0.80
	TIMES SOURCE:反発 , 1.50
ELSEIF EXP:Ａ経験 < EXPLV:4
	TIMES SOURCE:痛み , 0.60
	TIMES SOURCE:反発 , 1.20
ELSEIF EXP:Ａ経験 < EXPLV:5
	TIMES SOURCE:痛み , 0.40
ELSEIF EXP:Ａ経験 >= EXPLV:5
	TIMES SOURCE:痛み , 0.20
ENDIF

;PALAM:潤滑をみる
IF PALAM:潤滑 < PALAMLV:1
	TIMES SOURCE:痛み , 1.20
	TIMES SOURCE:反発 , 2.00
ELSEIF PALAM:潤滑 < PALAMLV:2
	TIMES SOURCE:痛み , 1.00
	TIMES SOURCE:反発 , 1.50
ELSEIF PALAM:潤滑 < PALAMLV:3
	TIMES SOURCE:痛み , 0.60
ELSEIF PALAM:潤滑 < PALAMLV:4
	TIMES SOURCE:痛み , 0.30
ELSEIF PALAM:潤滑 >= PALAMLV:4
	TIMES SOURCE:痛み , 0.20
ENDIF


;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
CALL COM_STAIN


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;A経験
EXP:Ａ経験 += 2
PRINTL Ａ経験＋２

;ゲイ経験とか加算
CALL COM_EXP(1)

;触手召喚時、触手経験のリセットをする
SIF TEQUIP:触手 == 1
	T = 0

;依存度ベクトル
TFLAG:33 = 3


RETURN 1



;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM54
;アナルバイブ挿入中
IF TEQUIP:触手
	PRINTL ＜アナル触手挿入中＞
ELSE
	PRINTL ＜アナルバイブ挿入中＞
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
LOSEBASE:体力 += 10
LOSEBASE:気力 += 30

SOURCE:快Ａ += 125
SOURCE:痛み += 100
SOURCE:露出 += 25
SOURCE:逸脱 += 25
SOURCE:反発 += 40

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 35

;Aへの苦痛は先に処理しておく
;EXP:Ａ経験をみる
A = 100
B = 40
IF EXP:Ａ経験 < EXPLV:1
	TIMES A , 3.00
	TIMES B , 3.00
ELSEIF EXP:Ａ経験 < EXPLV:2
	TIMES A , 1.20
	TIMES B , 2.00
ELSEIF EXP:Ａ経験 < EXPLV:3
	TIMES A , 0.80
	TIMES B , 1.50
ELSEIF EXP:Ａ経験 < EXPLV:4
	TIMES A , 0.60
	TIMES B , 1.20
ELSEIF EXP:Ａ経験 < EXPLV:5
	TIMES A , 0.40
ELSEIF EXP:Ａ経験 >= EXPLV:5
	TIMES A , 0.20
ENDIF

;PALAM:潤滑をみる
IF PALAM:潤滑 < PALAMLV:1
	TIMES A , 1.20
	TIMES B , 2.00
ELSEIF PALAM:潤滑 < PALAMLV:2
	TIMES A , 1.00
	TIMES B , 1.50
ELSEIF PALAM:潤滑 < PALAMLV:3
	TIMES A , 0.60
ELSEIF PALAM:潤滑 < PALAMLV:4
	TIMES A , 0.30
ELSEIF PALAM:潤滑 >= PALAMLV:4
	TIMES A , 0.20
ENDIF
SOURCE:痛み += A
SOURCE:反発 += B

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:Ａ経験 += 1
PRINTL Ａ経験＋１

;触手経験加算
SIF TEQUIP:触手 == 1
	T += 1


RETURN 1


