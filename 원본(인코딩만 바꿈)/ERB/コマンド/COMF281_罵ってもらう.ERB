;-------------------------------------------------
;罵ってもらう
;主人マゾ系コマンド
;-------------------------------------------------
@COM281

PRINTL 罵ってもらう
STR:0 = 罵ってもらう

;-------------------------------------------------
;実行判定処理
;-------------------------------------------------
;すべての命令に共通の要素を考慮
;(従順が高いと命令に従いやすいなど)
CALL COM_ORDER

;実行判定操作
CALL KOJO_DENIAL_PLUS

;合計を表示(15以上で実行)
PRINT  = 
PRINTV A

V = 15
SIF A < V
	PRINT  < 
SIF A == V
	PRINT  = 
SIF A > V
	PRINT  > 
PRINT 実行値
PRINTV V

;実行不可口上/実行判定操作
SIF A < V
	CALL KOJO_DENIAL

WAIT

;実行できない
SIF A < V
	RETURN 0

CALL KOJO_MESSAGE_COM


;実行者が奴隷であるフラグ
TFLAG:28 = 1

;-------------------------------------------------
;射精ゲージチェック（主人）
;-------------------------------------------------
B = 50

CALL SHOOT_GAUGE_CHECK_MT

;再装填処理中は射精ゲージは20分の1に
SIF CFLAG:PLAYER:9 > 0
	B /= 20

SIF PENIS(PLAYER)
	BASE:PLAYER:射精 += B


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 5
LOSEBASE:気力 += 50

SOURCE:性行動 += 100
SOURCE:達成感 += 50
SOURCE:恐れ += 500
SOURCE:屈従 += 50
SOURCE:逸脱 += 400
SOURCE:反発 += 500

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;サドっ気及びサドの処理は先にしておく
;サドっ気を見る
IF ABL:10 == 0
	TIMES SOURCE:屈従 , 0.80
	SOURCE:液体 += 0
	SOURCE:欲情 += 0
ELSEIF ABL:サドっ気 == 1
	TIMES SOURCE:屈従 , 1.00
	SOURCE:液体 += 20
	SOURCE:欲情 += 30
	SOURCE:中毒充足 += 20
ELSEIF ABL:サドっ気 == 2
	TIMES SOURCE:屈従 , 1.20
	SOURCE:液体 += 40
	SOURCE:欲情 += 70
	SOURCE:中毒充足 += 50
ELSEIF ABL:サドっ気 == 3
	TIMES SOURCE:屈従 , 1.40
	SOURCE:液体 += 70
	SOURCE:欲情 += 120
	SOURCE:中毒充足 += 90
ELSEIF ABL:サドっ気 == 4
	TIMES SOURCE:屈従 , 1.50
	SOURCE:液体 += 110
	SOURCE:欲情 += 180
	SOURCE:中毒充足 += 120
ELSEIF ABL:サドっ気 == 5
	TIMES SOURCE:屈従 , 1.70
	SOURCE:液体 += 150
	SOURCE:欲情 += 250
	SOURCE:中毒充足 += 160
ELSEIF ABL:サドっ気 == 6
	TIMES SOURCE:屈従 , 1.90
	SOURCE:液体 += 200
	SOURCE:欲情 += 300
	SOURCE:中毒充足 += 200
ELSEIF ABL:サドっ気 == 7
	TIMES SOURCE:屈従 , 2.10
	SOURCE:液体 += 250
	SOURCE:欲情 += 350
	SOURCE:中毒充足 += 300
ELSEIF ABL:サドっ気 == 8
	TIMES SOURCE:屈従 , 2.30
	SOURCE:液体 += 300
	SOURCE:欲情 += 400
	SOURCE:中毒充足 += 350
ELSEIF ABL:サドっ気 == 9
	TIMES SOURCE:屈従 , 2.50
	SOURCE:液体 += 350
	SOURCE:欲情 += 450
	SOURCE:中毒充足 += 400
ELSEIF ABL:サドっ気 >= 10
	TIMES SOURCE:屈従 , 3.00
	SOURCE:液体 += 500
	SOURCE:欲情 += 500
	SOURCE:中毒充足 += 500
ENDIF

;サドを見る
IF TALENT:サド
	TIMES SOURCE:性行動 , 2.50
	TIMES SOURCE:液体 , 1.20
	TIMES SOURCE:欲情 , 1.20
ENDIF

;TALENT:素直をみる
IF TALENT:素直 == 1
	TIMES SOURCE:屈従 , 0.75
	TIMES SOURCE:逸脱 , 0.75
	TIMES SOURCE:反発 , 0.75
ENDIF

;TALENT:プライド高いをみる
IF TALENT:プライド高い == 1
	TIMES SOURCE:達成感 , 1.50
ENDIF

;TALENT:ツンデレをみる
IF TALENT:ツンデレ == 1
	TIMES SOURCE:達成感 , 0.80
	TIMES SOURCE:中毒充足 , 0.80
	TIMES SOURCE:鬱屈 , 1.80
ENDIF

;TALENT:臆病をみる
IF TALENT:臆病 == 1
	TIMES SOURCE:鬱屈 , 1.50
	TIMES SOURCE:達成感 , 0.75
ENDIF


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;ゲイ経験とか加算
CALL COM_EXP(1)

;サドっ気に応じて嗜虐快楽経験
E = 1
L = 0
IF ABL:サドっ気 == 0
	E += 0
	L += 0
ELSEIF ABL:サドっ気 == 1
	E += 1
	L += 1
ELSEIF ABL:サドっ気 == 2
	E += 3
	L += 2
ELSEIF ABL:サドっ気 == 3
	E += 5
	L += 3
ELSEIF ABL:サドっ気 == 4
	E += 7
	L += 4
ELSEIF ABL:サドっ気 >= 5
	E += 9
	L += 5
ENDIF
;調教者のマゾっ気で嗜虐快楽経験
IF ABL:PLAYER:9 == 0
	E += 0
	L += 0
ELSEIF ABL:PLAYER:9 == 1
	E += 1
	L += 1
ELSEIF ABL:PLAYER:9 == 2
	E += 2
	L += 3
ELSEIF ABL:PLAYER:9 == 3
	E += 3
	L += 5
ELSEIF ABL:PLAYER:9 == 4
	E += 4
	L += 7
ELSEIF ABL:PLAYER:9 >= 5
	E += 5
	L += 9
ENDIF
PRINT 嗜虐快楽経験+
PRINTVL E
EXP:嗜虐快楽経験 += E
IF L > 0
	PRINTFORM %CALLNAME:PLAYER%の
	PRINT 苦痛快楽経験+
	PRINTVL L
	EXP:PLAYER:苦痛快楽経験 += L
	TFLAG:27 = L
ENDIF

;愛情経験(減少）
IF (TALENT:恋慕 == 1 || TALENT:親愛 == 1) && ASSIPLAY == 0 && EXP:愛情経験 > 0
	PRINTS EXPNAME:23
	PRINTL -1
	EXP:愛情経験 -= 1
ENDIF

;依存度ベクトル
TFLAG:33 = 5

;依存度補正値(服従で1、隷属で2）
IF TALENT:服従 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:隷属 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1



