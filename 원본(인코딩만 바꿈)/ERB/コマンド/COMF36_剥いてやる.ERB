;-------------------------------------------------
;剥いてやる
;Ｐ系調教コマンド
;-------------------------------------------------
@COM36

PRINTL 剥いてやる
STR:0 = 剥いてやる
CALL KOJO_MESSAGE_COM

;ストッキングびりびりフラグ
IF TEQUIP:特殊２ == 5 || TEQUIP:特殊２ == 6
	TFLAG:55 = 1
ENDIF


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 20
LOSEBASE:気力 += 80

SOURCE:快Ｃ += 20

;調教者の技巧により快Ｃ
IF ABL:PLAYER:技巧 == 3
	SOURCE:快Ｃ += 120
ELSEIF ABL:PLAYER:技巧 == 4
	SOURCE:快Ｃ += 180
ELSEIF ABL:PLAYER:技巧 == 5
	SOURCE:快Ｃ += 250
ELSEIF ABL:PLAYER:技巧 == 6
	SOURCE:快Ｃ += 300
ELSEIF ABL:PLAYER:技巧 == 7
	SOURCE:快Ｃ += 350
ELSEIF ABL:PLAYER:技巧 == 8
	SOURCE:快Ｃ += 400
ELSEIF ABL:PLAYER:技巧 == 9
	SOURCE:快Ｃ += 450
ELSEIF ABL:PLAYER:技巧 >= 10
	SOURCE:快Ｃ += 500
ENDIF

;恐れ、露出、屈従、反発
SOURCE:恐れ += 400
SOURCE:露出 += 800
SOURCE:屈従 += 300
SOURCE:反発 += 300


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 500

;苦痛を伴わないマゾっ気及びマゾの処理は先にしておく
;マゾっ気を見る
A = 700
IF ABL:マゾっ気 == 0
	TIMES A , 0.80
	SOURCE:液体 += 0
	SOURCE:欲情 += 0
ELSEIF ABL:マゾっ気 == 1
	TIMES A , 1.00
	SOURCE:液体 += 20
	SOURCE:欲情 += 30
ELSEIF ABL:マゾっ気 == 2
	TIMES A , 1.20
	SOURCE:液体 += 40
	SOURCE:欲情 += 70
ELSEIF ABL:マゾっ気 == 3
	TIMES A , 1.40
	SOURCE:液体 += 70
	SOURCE:欲情 += 120
ELSEIF ABL:マゾっ気 == 4
	TIMES A , 1.50
	SOURCE:液体 += 110
	SOURCE:欲情 += 180
ELSEIF ABL:マゾっ気 == 5
	TIMES A , 1.70
	SOURCE:液体 += 150
	SOURCE:欲情 += 250
ELSEIF ABL:マゾっ気 == 6
	TIMES A , 1.90
	SOURCE:液体 += 200
	SOURCE:欲情 += 300
ELSEIF ABL:マゾっ気 == 7
	TIMES A , 2.10
	SOURCE:液体 += 250
	SOURCE:欲情 += 350
ELSEIF ABL:マゾっ気 == 8
	TIMES A , 2.30
	SOURCE:液体 += 300
	SOURCE:欲情 += 400
ELSEIF ABL:マゾっ気 == 9
	TIMES A , 2.50
	SOURCE:液体 += 350
	SOURCE:欲情 += 450
ELSEIF ABL:マゾっ気 >= 10
	TIMES A , 3.00
	SOURCE:液体 += 500
	SOURCE:欲情 += 500
ENDIF
SOURCE:露出 += A

;調教者の技巧により快Ｃ、痛み、恐れ
A = 700
IF ABL:PLAYER:技巧 == 0
	TIMES A , 1.50
ELSEIF ABL:PLAYER:技巧 == 1
	TIMES A , 1.20
ELSEIF ABL:PLAYER:技巧 == 2
	TIMES A , 1.00
ELSEIF ABL:PLAYER:技巧 == 3
	TIMES A , 0.50
ELSEIF ABL:PLAYER:技巧 == 4
	TIMES A , 0.30
ENDIF
SOURCE:痛み += A
SOURCE:恐れ += A
SOURCE:反発 += (A/2)

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
CALL COM_STAIN

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;包茎が無くなる
TALENT:包茎 = 0

;依存度ベクトル
IF A > 700
	TFLAG:33 = 3
ELSE
	TFLAG:33 = 1
ENDIF

RETURN 1


