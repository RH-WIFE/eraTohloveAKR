;-------------------------------------------------
;陰核クリップ
;Ｃ系調教コマンド
;-------------------------------------------------
@COM24

PRINTL 陰核クリップ
STR:0 = 陰核クリップ
CALL KOJO_MESSAGE_COM


;着脱の処理
IF TEQUIP:陰核クリップ == 0
	TEQUIP:陰核クリップ = 1
ELSE
	TEQUIP:陰核クリップ = 0
ENDIF

;ストッキングびりびりフラグ
IF TEQUIP:特殊２ == 5 || TEQUIP:特殊２ == 6
	TFLAG:55 = 1
ENDIF


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 20
LOSEBASE:気力 += 80

SOURCE:快Ｃ += 350

SOURCE:痛み += 400
;地下室にいると苦痛のソース追加
SIF TEQUIP:地下室
	TIMES SOURCE:痛み , 2.00
;Ｃ敏感だと苦痛のソース追加
SIF TALENT:Ｃ敏感
	TIMES SOURCE:痛み , 1.50

SOURCE:露出 += 30
SOURCE:屈従 += 120
SOURCE:逸脱 += 100
SOURCE:反発 += 100

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 100


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;ゲイ経験とか加算
CALL COM_EXP(1)

;依存度ベクトル
TFLAG:33 = 3

;依存度補正値(服従で1、隷属で2）
IF TALENT:服従 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:隷属 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF



RETURN 1



;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM24
PRINTL ＜陰核クリップ装備中＞


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
LOSEBASE:体力 += 10
LOSEBASE:気力 += 30

SOURCE:快Ｃ += 100

IF TEQUIP:地下室
	SOURCE:痛み += 800
ELSE
	SOURCE:痛み += 450
ENDIF
;Ｃ敏感だと苦痛のソース追加
SIF TALENT:Ｃ敏感
	TIMES SOURCE:痛み , 1.50

SOURCE:露出 += 15
SOURCE:屈従 += 60
SOURCE:逸脱 += 50
SOURCE:反発 += 50

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 50


RETURN 1

