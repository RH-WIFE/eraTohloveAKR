;-------------------------------------------------
;催眠触手
;触手-拷問系コマンド
;-------------------------------------------------
@COM374

PRINTL 催眠触手
STR:0 = 催眠触手

;エロい夢
IF RAND:3 == 0
	TFLAG:56 = 1
;悪い夢
ELSEIF RAND:2 == 0
	TFLAG:56 = 2
;いい夢
ELSE
	TFLAG:56 = 3
ENDIF

CALL KOJO_MESSAGE_COM


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 500
LOSEBASE:気力 += 1200

;エロい夢
IF TFLAG:56 == 1
	SOURCE:快Ｃ += 5000
	SIF VAGINA(TARGET)
		SOURCE:快Ｖ += 5000
	SOURCE:快Ａ += 5000
	SOURCE:快Ｂ += 5000
	SOURCE:性行動 += 1200
	SOURCE:達成感 += 1200
	SOURCE:中毒充足 += 1000
	SOURCE:液体 += 2500
	SOURCE:欲情 += 5000
;悪い夢
ELSEIF TFLAG:56 == 2
	SOURCE:痛み += 10000
	SOURCE:恐れ += 15000
	SOURCE:欲情 += 3000
	SOURCE:露出 += 2600
	SOURCE:屈従 += 5000
;いい夢
ELSEIF TFLAG:56 == 3
	SOURCE:情愛 += 2000
	SOURCE:性行動 += 650
	SOURCE:達成感 += 800
	SOURCE:中毒充足 += 500
	SOURCE:液体 += 1200
	SOURCE:欲情 += 2000
	SOURCE:恭順 += 6000
ENDIF

SOURCE:屈従 += 5000
SOURCE:逸脱 += 1200
SOURCE:反発 += 1200

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 1200

;ストレスいっぱい増加
CFLAG:10 += RAND:35


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
IF EXP:催眠経験 == 0
	EXP:異常経験 += 1
	PRINTL 催眠初経験で異常経験＋1
ENDIF

T = 1

RETURN 1

