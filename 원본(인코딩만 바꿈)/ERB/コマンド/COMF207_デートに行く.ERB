;-------------------------------------------------
;デートに行く
;コミュニケーション系コマンド
;-------------------------------------------------
@COM207

PRINTL デートに行く
STR:0 = デートに行く

;普通のデート
TFLAG:17 = 1

;露出デートは２。口上側で立てることができる。
;TFLAG:17 = 2

CALL KOJO_MESSAGE_COM

;行かなかった場合は戻る
SIF TFLAG:17 == 99
	RETURN 0

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 200
LOSEBASE:気力 += 50

IF TFLAG:17 == 2
	SOURCE:情愛 += 200
	SOURCE:達成感 += 300
	SOURCE:恭順 += 300
	SOURCE:露出 += 600

	;露出低いと逆に増加
	SIF ABL:露出癖 < 2
		CFLAG:TARGET:10 += 3
ELSE
	SOURCE:情愛 += 200
	SOURCE:達成感 += 300
	SOURCE:恭順 += 300
	;ストレス減少処理
	CFLAG:TARGET:10 -= 3
	;恋慕系だとさらに減少
	SIF TALENT:恋慕 || TALENT:親愛
		CFLAG:TARGET:10 -= 5
ENDIF

SIF TALENT:親愛 || TALENT:恋慕
	TIMES SOURCE:情愛 , 1.50

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
IF TFLAG:17 == 2 && ABL:露出癖 >= 3
	PRINTFORML %EXPNAME:23%＋３
	EXP:愛情経験 += 3
ELSE
	PRINTFORML %EXPNAME:23%＋３
	EXP:愛情経験 += 3
ENDIF

;移動時に尿・便存在をクリア
TFLAG:66 = 0
TFLAG:57 = 0

CALL COM_STAIN


;依存度ベクトル
TFLAG:33 = 4

;依存度補正値(恋慕で3、親愛で5）
IF TALENT:恋慕 && ASSIPLAY == 0
	TFLAG:30 += 3
ELSEIF TALENT:親愛 && ASSIPLAY == 0
	TFLAG:30 += 5
ENDIF

RETURN 1



