;-------------------------------------------------
;ニプルキャップ
;Ｂ系調教コマンド
;-------------------------------------------------
@COM13

IF TEQUIP:触手
	PRINTL 触手乳首責め
	STR:0 = 触手乳首責め
	SELECTCOM = 341
ELSE
	PRINTL ニプルキャップ
	STR:0 = ニプルキャップ
ENDIF

CALL KOJO_MESSAGE_COM


;着脱の処理
IF TEQUIP:ニプルキャップ == 0
	TEQUIP:ニプルキャップ = 1
ELSE
	TEQUIP:ニプルキャップ = 0
ENDIF


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 5
LOSEBASE:気力 += 30

SOURCE:快Ｂ += 200

SOURCE:露出 += 20
SOURCE:逸脱 += 30
SOURCE:反発 += 30


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 30


;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
CALL COM_STAIN


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;ゲイ経験とか加算
CALL COM_EXP(1)

;触手召喚時、触手経験のリセットをする
SIF TEQUIP:触手 == 1
	T = 0

;依存度ベクトル
TFLAG:33 = 1


RETURN 1



;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM13
;二プルキャップ装備中
IF TEQUIP:触手
	PRINTL ＜触手乳首責め中＞
ELSE
	PRINTL ＜二プルキャップ装備中＞
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
LOSEBASE:体力 += 5
LOSEBASE:気力 += 10

SOURCE:快Ｂ += 100
SOURCE:露出 += 10
SOURCE:逸脱 += 15
SOURCE:反発 += 15

RETURN 1

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;触手経験加算
SIF TEQUIP:触手 == 1
	T += 1




