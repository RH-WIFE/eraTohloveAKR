;-------------------------------------------------
;泡踊りする
;シチュエーション別コマンド
;-------------------------------------------------
@COM318

PRINTL 泡踊りする
STR:0 = 泡踊りする
CALL KOJO_MESSAGE_COM

;ストッキング脱がせる
IF TEQUIP:特殊２ == 5 || TEQUIP:特殊２ == 6
	TEQUIP:特殊２ = 0
	TEQUIP:特殊２ = 0
ENDIF

;-------------------------------------------------
;射精ゲージチェック
;-------------------------------------------------
B = 200

CALL SHOOT_GAUGE_CHECK_MT

;再装填処理中は射精ゲージは20分の1に
SIF CFLAG:PLAYER:9 > 0
	B /= 20

SIF PENIS(PLAYER)
	BASE:PLAYER:射精 += B

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 5
LOSEBASE:気力 += 50

SOURCE:快Ｂ += 100
SOURCE:快Ｃ += 100

SOURCE:情愛 += 300

;スキンシップ好きだと情愛のソース追加
SIF TALENT:スキンシップ好き
	SOURCE:情愛 += 50

SOURCE:恐れ += 20
SOURCE:中毒充足 += 100
SOURCE:欲情 += 300
SOURCE:露出 += 60
SOURCE:逸脱 += 300
SOURCE:反発 += 300

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 800


;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
CALL COM_STAIN

;移動時に尿・便存在をクリア
TFLAG:66 = 0
TFLAG:57 = 0


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;ゲイ経験とか加算
CALL COM_EXP(7)

;愛情経験
IF (TALENT:恋慕 == 1 || TALENT:親愛 == 1) && ASSIPLAY == 0
	PRINTS EXPNAME:23
	PRINTL +1
	EXP:愛情経験 += 1
ENDIF

;依存度ベクトル
TFLAG:33 = 1

;依存度補正値(主人かつ恋慕、淫乱、服従で1。親愛、娼婦、隷属で2）
IF (TALENT:恋慕 || TALENT:淫乱 || TALENT:服従) && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF (TALENT:親愛 || TALENT:娼婦 || TALENT:隷属) && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1

