;-------------------------------------------------
;乳首責め
;Ｂ系調教コマンド
;-------------------------------------------------
@COM14

PRINTL 乳首責め
STR:0 = 乳首責め
CALL KOJO_MESSAGE_COM


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 10
LOSEBASE:気力 += 50

SOURCE:快Ｂ += 200
;着衣プレイ
SIF TEQUIP:下着（上） || TOPS(TARGET)
	TIMES SOURCE:快Ｂ , 0.70

;地下室にいると苦痛のソース追加
SIF TEQUIP:地下室
	SOURCE:痛み += 450

SIF TEQUIP:乳首クリップ
	SOURCE:痛み += 300

;主人がサドかサドっ気高いと苦痛増加
SIF TALENT:PLAYER:サド || ABL:PLAYER:サドっ気 >= 3
	SOURCE:痛み += 150

;Ｂ敏感　陥没乳首かつ欲情が一定以上　だと苦痛のソース追加
SIF TALENT:Ｂ敏感 || (TALENT:陥没乳首 && (PALAM:欲情 >= PALAMLV:3))
	TIMES SOURCE:痛み , 1.50

SOURCE:露出 += 10
SOURCE:不潔 += 10
SOURCE:反発 += 10

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 10


;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷のＢ（上衣類）⇔調教者の手の汚れが移動
;道具を使用する場合は汚れは移動しない
IF TEQUIP:ニプルキャップ || TEQUIP:乳首クリップ
ELSE
	CALL COM_STAIN
ENDIF


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;ゲイ経験とか加算
CALL COM_EXP(5)

;依存度ベクトル
TFLAG:33 = 1


RETURN 1



