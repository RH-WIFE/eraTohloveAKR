;-------------------------------------------------
;二輪挿しアナルさせる
;派生系コマンド
;
; 6:主人Ｖに挿入	 7:主人Ａに挿入
;-------------------------------------------------
@COM523

PRINTL 二輪挿しアナルさせる
STR:0 = 二輪挿しアナルさせる

SELECTCOM = 523
CALL KOJO_MESSAGE_COM

;実行者が奴隷であるフラグ
TFLAG:28 = 1

;ストッキングびりびりフラグ
IF TEQUIP:特殊２ == 5 || TEQUIP:特殊２ == 6
	TFLAG:55 = 1
ENDIF

;処女喪失フラグ
SIF TALENT:MASTER:バックバージン
	TFLAG:161 |= 2

;調教者が童貞だった場合の喪失フラグ
SIF TALENT:童貞
	TFLAG:160 |= 1
;主人によるセックスで童貞喪失
SIF TALENT:童貞 && (TALENT:恋慕 || TALENT:親愛) && ASSIPLAY == 0 && (TFLAG:49 == 6 || TFLAG:49 == 7)
	TFLAG:162 = 1

;調教者が童貞だった場合の喪失フラグ
SIF TALENT:ASSI:童貞
	TFLAG:160 |= 3


;-------------------------------------------------
;射精ゲージチェック（主人）
;-------------------------------------------------
B = 1000

CALL SHOOT_GAUGE_CHECK_3PM

;再装填処理中は射精ゲージは20分の1に
SIF CFLAG:MASTER:9 > 0
	B /= 20

SIF PENIS(PLAYER)
	BASE:MASTER:射精 += B

;-------------------------------------------------
;射精ゲージチェック（助手）
;-------------------------------------------------
B = 1000

CALL SHOOT_GAUGE_CHECK_3PA

;再装填処理中は射精ゲージは20分の1に
SIF CFLAG:ASSI:9 > 0
	B /= 20

SIF PENIS(ASSI)
	BASE:ASSI:射精 += B


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
LOSEBASE:体力 += 250
LOSEBASE:気力 += 250

SOURCE:快Ｃ += 350

SOURCE:情愛 += 300
;スキンシップ好きだと情愛のソース追加
SIF TALENT:スキンシップ好き
	SOURCE:情愛 += 50

SOURCE:性行動 += 500
SOURCE:痛み += 400
SOURCE:中毒充足 += 250
SOURCE:露出 += 100
SOURCE:屈従 += 500
SOURCE:反発 += 250

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 400
	
;貞操観念持ちで恋慕、親愛持ち以外には常に反発のソースを追加する（セックス系のみ）
SIF TALENT:貞操観念 && (TALENT:恋慕 == 0 && TALENT:親愛 == 0)
	SOURCE:反発 += 1500

;中毒による中毒充足のソースは先に処理しておく
;セックス中毒を見る
IF ABL:セックス中毒 == 1
	TIMES SOURCE:中毒充足 , 0.00
ELSEIF ABL:セックス中毒 == 2
	TIMES SOURCE:中毒充足 , 0.30
ELSEIF ABL:セックス中毒 == 3
	TIMES SOURCE:中毒充足 , 0.60
ELSEIF ABL:セックス中毒 == 4
	TIMES SOURCE:中毒充足 , 0.90
ELSEIF ABL:セックス中毒 == 5
	TIMES SOURCE:中毒充足 , 1.20
ELSEIF ABL:セックス中毒 == 6
	TIMES SOURCE:中毒充足 , 1.50
ELSEIF ABL:セックス中毒 == 7
	TIMES SOURCE:中毒充足 , 1.80
ELSEIF ABL:セックス中毒 == 8
	TIMES SOURCE:中毒充足 , 2.30
ELSEIF ABL:セックス中毒 == 9
	TIMES SOURCE:中毒充足 , 3.00
ELSEIF ABL:セックス中毒 >= 10
	TIMES SOURCE:中毒充足 , 5.00
ENDIF

;馬並み持ちで、調教者が小人体型だった場合、逸脱ソース追加
SIF TALENT:MASTER:小人体型 && TALENT:馬並み
	SOURCE:逸脱 += 500

;-------------------------------------------------
;射精チェック１（主人）
;-------------------------------------------------
CALL SAMEN_CHECK(MASTER,1)

;射精時の処理
IF E >= 1
	;射精先タイプの設定
	TFLAG:703 = 9
	;射精先選択の可・不可
	TFLAG:704 = 0
	;汎用的な処理はこの関数で行う
	;（射精ゲージの再計算や射精経験の上昇と共通部分の表示）
	CALL SAMEN_SHOOT
ENDIF

;助手に犯させるで主人が射精したフラグ
IF E == 2
	TFLAG:7 = 4
ELSEIF E == 1
	TFLAG:7 = 3
ENDIF

;-------------------------------------------------
;射精チェック２（助手）
;-------------------------------------------------
CALL SAMEN_CHECK(ASSI)

;射精時の処理
IF E >= 1
	;射精先タイプの設定
	TFLAG:703 = 2
	;射精先選択の可・不可
	TFLAG:704 = 0
	;汎用的な処理はこの関数で行う
	;（射精ゲージの再計算や射精経験の上昇と共通部分の表示）
	CALL SAMEN_SHOOT
ENDIF

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷のＣ⇔調教者のＡと腸内の汚れが移動
;ペニスバンドを使う場合、汚れは移動しない
IF PENIS(TARGET)
	STAIN:ペニス |= STAIN:MASTER:腸内
	STAIN:MASTER:腸内 |= STAIN:ペニス
	STAIN:ペニス |= STAIN:MASTER:アナル
	STAIN:MASTER:アナル |= STAIN:ペニス
ENDIF

;助手のＣ⇔主人のＡと腸内の汚れが移動
;ペニスバンドを使う場合、汚れは移動しない
IF PENIS(ASSI)
	STAIN:ASSI:ペニス |= STAIN:MASTER:腸内
	STAIN:MASTER:腸内 |= STAIN:ASSI:ペニス
	STAIN:ASSI:ペニス |= STAIN:MASTER:アナル
	STAIN:MASTER:アナル |= STAIN:ASSI:ペニス
ENDIF


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;Ａ経験
EXP:MASTER:Ａ経験 += 10
PRINTFORML %CALLNAME:PLAYER%のＡ経験＋１０

;Ａ拡張経験
IF EXP:MASTER:Ａ拡張経験 == 0
	EXP:MASTER:異常経験 += 1
	PRINTFORML Ａ拡張初経験で%CALLNAME:PLAYER%の異常経験＋１
ENDIF
EXP:MASTER:Ａ拡張経験 += 2
PRINTFORML %CALLNAME:PLAYER%のＡ拡張経験＋2

;性交経験
EXP:PLAYER:性交経験 += 2
EXP:ASSI:性交経験 += 1
EXP:性交経験 += 1
PRINTFORML %CALLNAME:PLAYER%の性交経験＋2

;挿入経験
EXP:挿入経験 += 1
EXP:ASSI:挿入経験 += 1

;レズ経験
A = 5
B = NO:MASTER + 1099
C = NO:ASSI + 1099
D = 8

IF MALE(TARGET) == 0 && MALE(MASTER) == 0 && MALE(ASSI) == 0
	PRINTFORML %EXPNAME:40%+{D}
	EXP:レズ経験 += D
ELSEIF MALE(TARGET) == 0 && MALE(MASTER) == 0
	PRINTFORML %EXPNAME:40%+{A}
	EXP:レズ経験 += A
ELSEIF MALE(TARGET) == 0 && MALE(ASSI) == 0
	PRINTFORML %EXPNAME:40%+{A}
	EXP:レズ経験 += A
ELSEIF MALE(TARGET) && MALE(MASTER) && MALE(ASSI)
	PRINTFORML %EXPNAME:41%+{D}
	EXP:ゲイ経験 += D
ELSEIF MALE(TARGET) && MALE(MASTER)
	PRINTFORML %EXPNAME:41%+{A}
	EXP:ゲイ経験 += A
ELSEIF MALE(TARGET) && MALE(ASSI)
	PRINTFORML %EXPNAME:41%+{A}
	EXP:ゲイ経験 += A
ENDIF
;調教者を記録
CFLAG:B += A
CFLAG:C += A

;依存度ベクトル
TFLAG:33 = 1

;奉仕快楽フラグ
TFLAG:100 = 1

RETURN 1


