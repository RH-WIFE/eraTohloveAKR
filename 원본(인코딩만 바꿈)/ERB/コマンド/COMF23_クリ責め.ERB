;-------------------------------------------------
;クリ責め
;Ｃ系調教コマンド
;-------------------------------------------------
@COM23

PRINTL クリ責め
STR:0 = クリ責め
CALL KOJO_MESSAGE_COM


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 10
LOSEBASE:気力 += 50

SOURCE:快Ｃ += 200
SIF TEQUIP:クリキャップ
	TIMES SOURCE:快Ｃ , 1.50
;着衣（ズボン系）のとき
SIF BOTTOMS(TARGET)
	TIMES SOURCE:快Ｃ , 0.60
SIF TEQUIP:下着（下） || TEQUIP:特殊２ == 5 || TEQUIP:特殊２ == 6
	TIMES SOURCE:快Ｃ , 0.90

;三角木馬乗馬中、サド３以上か地下室にいると苦痛のソース追加
IF TEQUIP:三角木馬 && (ABL:PLAYER:サドっ気 >= 3 || TALENT:PLAYER:サド || TEQUIP:地下室)
	SOURCE:痛み += 800
;地下室にいると苦痛のソース追加
ELSEIF TEQUIP:地下室
	SOURCE:痛み += 600
ENDIF

SIF ABL:PLAYER:サドっ気 >= 3 || TALENT:PLAYER:サド
	SOURCE:痛み += 200

SIF TEQUIP:陰核クリップ
	SOURCE:痛み += 400

;Ｃ敏感だと苦痛のソース追加
SIF TALENT:Ｃ敏感
	TIMES SOURCE:痛み , 1.50

SOURCE:露出 += 20
SOURCE:逸脱 += 30
SOURCE:反発 += 30


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 30

;スキンシップ好きだと情愛のソース追加
SIF TALENT:スキンシップ好き
	SOURCE:情愛 += 50



;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;調教者の手⇔奴隷のＶ（下衣類）の汚れが移動
;道具を使う場合、汚れは移動しない
IF (TEQUIP:三角木馬 && (ABL:PLAYER:サドっ気 >= 3 || TALENT:PLAYER:サド || TEQUIP:地下室)) || TEQUIP:クリキャップ || TEQUIP:陰核クリップ
ELSE
	CALL COM_STAIN
ENDIF


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;ゲイ経験とか加算
CALL COM_EXP(5)

;依存度ベクトル
TFLAG:33 = 1


RETURN 1





