;-------------------------------------------------
;愛撫
;基本系コマンド
;-------------------------------------------------
@COM0

PRINTL 愛撫
STR:0 = 愛撫
CALL KOJO_MESSAGE_COM


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 5
LOSEBASE:気力 += 30

SOURCE:快Ｃ += 30
SOURCE:快Ｂ += 30

;被り物のときは上から触る
IF TOPS(TARGET)
	TIMES SOURCE:快Ｂ , 0.60
ELSEIF TEQUIP:下着（上）
	TIMES SOURCE:快Ｂ , 0.70
ENDIF
;貞操帯
IF TEQUIP:下着（下） == 5
		TIMES SOURCE:快Ｃ , 0.00
;ズボン系
ELSEIF BOTTOMS(TARGET) >= 4
	TIMES SOURCE:快Ｃ , 0.50
ELSEIF TEQUIP:下着（下）
	TIMES SOURCE:快Ｃ , 0.80
ENDIF

SOURCE:情愛 += 50
;スキンシップ好きだと情愛のソース追加
SIF TALENT:スキンシップ好き
	SOURCE:情愛 += 50

SOURCE:露出 += 20
SOURCE:不潔 += 30
SOURCE:逸脱 += 20
SOURCE:反発 += 20

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 20

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
CALL COM_STAIN

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;ゲイ経験とか加算
CALL COM_EXP(5)

;依存度ベクトル
TFLAG:33 = 2

RETURN 1

