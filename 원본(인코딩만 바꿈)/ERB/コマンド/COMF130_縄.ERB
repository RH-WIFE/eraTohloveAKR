;-------------------------------------------------
;縄
;ＳＭ-拘束系コマンド
;-------------------------------------------------
@COM130

IF TEQUIP:触手
	PRINTL 触手緊縛
	STR:0 = 触手緊縛
	SELECTCOM = 351
ELSE
	PRINTL 縄で緊縛
	STR:0 = 縄で緊縛
ENDIF
CALL KOJO_MESSAGE_COM


;着脱の処理
IF TEQUIP:縄 == 0
	TEQUIP:縄 = 1
ELSE
	TEQUIP:縄 = 0
ENDIF


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 50
LOSEBASE:気力 += 30

SOURCE:痛み += 300
SOURCE:恐れ += 600
SOURCE:露出 += 200
SOURCE:屈従 += 250
SOURCE:逸脱 += 300
SOURCE:反発 += 700

;地下室にいると恐れのソース追加
SIF TEQUIP:地下室
	TIMES SOURCE:恐れ , 1.50

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;緊縛経験が高いと消費減少
IF EXP:緊縛経験 < EXPLV:3
	TIMES LOSEBASE:体力 , 1.00
	TIMES LOSEBASE:気力 , 1.00
ELSEIF EXP:緊縛経験 < EXPLV:4
	TIMES LOSEBASE:体力 , 0.90
	TIMES LOSEBASE:気力 , 0.90
ELSE
	TIMES LOSEBASE:体力 , 0.70
	TIMES LOSEBASE:気力 , 0.70
ENDIF

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;触手がいる場合、全体に触手の汚れを追加
SIF TEQUIP:触手
	CALL COM_STAIN

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:緊縛経験 += 5
PRINTL 緊縛経験＋５

;ゲイ経験とか加算
CALL COM_EXP(1)

;触手召喚時、触手経験のリセットをする
SIF TEQUIP:触手 == 1
	T = 0

;依存度ベクトル
TFLAG:33 = 3

;依存度補正値(服従で1、隷属で2）
IF TALENT:服従 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:隷属 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1



;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM130
IF TEQUIP:触手
	PRINTL ＜触手緊縛中＞
ELSE
	PRINTL ＜緊縛中＞
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 10
LOSEBASE:気力 += 10

SOURCE:痛み += 150
SOURCE:恐れ += 450
SOURCE:露出 += 100
SOURCE:屈従 += 125
SOURCE:逸脱 += 150
SOURCE:反発 += 350

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;緊縛経験が高いと消費減少
A = 60
IF EXP:緊縛経験 < EXPLV:3
	TIMES A , 1.00
ELSEIF EXP:緊縛経験 < EXPLV:4
	TIMES A , 0.90
ELSE
	TIMES A , 0.70
ENDIF
LOSEBASE:気力 += A


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:緊縛経験 += 1
PRINTL 緊縛経験＋１

;触手経験加算
SIF TEQUIP:触手 == 1
	T += 1


RETURN 1

