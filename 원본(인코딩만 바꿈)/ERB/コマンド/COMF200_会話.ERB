;-------------------------------------------------
;会話
;コミュニケーション系コマンド
;-------------------------------------------------
@COM200

PRINTL 会話
STR:0 = 会話
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 0
LOSEBASE:気力 += 10

IF TALENT:親愛 || TALENT:娼婦 || TALENT:隷属
	SOURCE:恭順 += 2000
	SOURCE:情愛 += 200
ELSEIF TALENT:恋慕 || TALENT:淫乱 || TALENT:服従
	SOURCE:恭順 += 1000
	SOURCE:情愛 += 100
ELSE
	SOURCE:恭順 += 500
	SOURCE:恐れ += 20
	SOURCE:反発 += 50
ENDIF

SOURCE:逸脱 += 100


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;愛情経験
IF (TALENT:恋慕 == 1 || TALENT:親愛 == 1) && ASSIPLAY == 0
	PRINTS EXPNAME:23
	PRINTL +1
	EXP:愛情経験 += 1
ENDIF

;依存度ベクトル
TFLAG:33 = 1

;依存度補正値(恋慕で1、親愛で2）
IF TALENT:恋慕 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:親愛 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1

