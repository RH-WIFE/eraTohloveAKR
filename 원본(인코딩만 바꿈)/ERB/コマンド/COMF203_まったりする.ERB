;まったりする
;コミュニケーション系コマンド
;-------------------------------------------------
@COM203

PRINTL まったりする
STR:0 = まったりする
CALL KOJO_MESSAGE_COM


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
;消費体力、気力
LOSEBASE:体力 -= 20
LOSEBASE:気力 -= 10

SOURCE:情愛 += 700

;ストレス減少処理
IF TALENT:恋慕 || TALENT:親愛
	CFLAG:TARGET:10 -= 2
ELSEIF TALENT:淫乱 || TALENT:娼婦 || TALENT:服従 || TALENT:隷属
	CFLAG:TARGET:10 -= 1
ENDIF


;-------------------------------------------------
;愛情経験追加
;-------------------------------------------------
;愛情経験
IF (TALENT:恋慕 == 1 || TALENT:親愛 == 1) && ASSIPLAY == 0
	PRINTS EXPNAME:23
	PRINTL +1
	EXP:愛情経験 += 1
ENDIF

;依存度ベクトル
TFLAG:33 = 4

;依存度補正値(恋慕で1、親愛で2）
IF TALENT:恋慕 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:親愛 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1

