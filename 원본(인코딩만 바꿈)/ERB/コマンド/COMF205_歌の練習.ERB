;-------------------------------------------------
;歌の練習
;コミュニケーション系コマンド
;-------------------------------------------------
@COM205

PRINTL 歌の練習
STR:0 = 歌の練習
CALL KOJO_MESSAGE_COM


;実行者が奴隷であるフラグ
TFLAG:28 = 1


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 50
LOSEBASE:気力 += 20

SOURCE:性行動 += 300
SOURCE:達成感 += 200
SOURCE:露出 += 50
SOURCE:屈従 += 100
SOURCE:逸脱 += 100
SOURCE:反発 += 100

;歌唱力高いとストレス減少
IF ABL:歌唱技能 >= 5
	CFLAG:TARGET:10 -= 5
ELSEIF ABL:歌唱技能 >= 3
	CFLAG:TARGET:10 -= 2
ENDIF
SIF CFLAG:TARGET:10 < 0
	CFLAG:TARGET:10 = 0

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;歌唱技能は先に処理しておく
IF ABL:歌唱技能 == 0
	TIMES SOURCE:性行動 , 0.50
	TIMES SOURCE:恭順 , 0.50
