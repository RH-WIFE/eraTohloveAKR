;-------------------------------------------------
;乳首クリップ
;Ｂ系調教コマンド
;-------------------------------------------------
@COM15

PRINTL 乳首クリップ
STR:0 = 乳首クリップ
CALL KOJO_MESSAGE_COM


;着脱の処理
IF TEQUIP:乳首クリップ == 0
	TEQUIP:乳首クリップ = 1
ELSE
	TEQUIP:乳首クリップ = 0
ENDIF


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 10
LOSEBASE:気力 += 50

SOURCE:快Ｂ += 350

SOURCE:痛み += 200
;地下室にいると苦痛のソース追加
SIF TEQUIP:地下室
	TIMES SOURCE:痛み , 2.00
;Ｂ敏感　陥没乳首だと苦痛のソース追加
SIF TALENT:Ｂ敏感 || TALENT:陥没乳首
	TIMES SOURCE:痛み , 1.50

SOURCE:露出 += 30
SOURCE:屈従 += 100
SOURCE:逸脱 += 100
SOURCE:反発 += 100


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 100



;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;ゲイ経験とか加算
CALL COM_EXP(1)

;依存度ベクトル
TFLAG:33 = 1

;依存度補正値(服従で1、隷属で2）
IF TALENT:服従 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:隷属 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1


;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM15
;乳首クリップ装備中
PRINTL ＜乳首クリップ装備中＞

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
LOSEBASE:体力 += 5
LOSEBASE:気力 += 20

SOURCE:快Ｂ += 100

IF TEQUIP:地下室
	SOURCE:痛み += 450
ELSE
	SOURCE:痛み += 200
ENDIF

;Ｂ敏感　陥没乳首だと苦痛のソース追加
SIF TALENT:Ｂ敏感 || TALENT:陥没乳首
	TIMES SOURCE:痛み , 1.50

SOURCE:露出 += 15
SOURCE:屈従 += 50
SOURCE:逸脱 += 50
SOURCE:反発 += 50

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 50

RETURN 1



