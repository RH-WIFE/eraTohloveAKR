;-------------------------------------------------
;三角木馬
;ＳＭ系コマンド
;-------------------------------------------------
@COM145

PRINTL 三角木馬
STR:0 = 三角木馬


;-------------------------------------------------
;実行判定処理
;-------------------------------------------------
;拘束されてなくて、地下室にいないときのみ実行判定を行う
IF !TEQUIP:縄 && !TEQUIP:地下室
	;すべての命令に共通の要素を考慮
	;(従順が高いと命令に従いやすいなど)
	CALL COM_ORDER

	;実行判定操作
	CALL KOJO_DENIAL_PLUS

	;合計を表示(50以上で実行)
	PRINT  = 
	PRINTV A

	V = 50
	SIF A < V
		PRINT  < 
	SIF A == V
		PRINT  = 
	SIF A > V
		PRINT  > 
	PRINT 実行値
	PRINTV V

	;実行不可口上/実行判定操作
	SIF A < V
		CALL KOJO_DENIAL

	WAIT

	;実行できない
	SIF A < V
		RETURN 0
ENDIF


CALL KOJO_MESSAGE_COM

;着脱の処理
IF TEQUIP:三角木馬 == 0
	TEQUIP:三角木馬 = 1
	SIF !TEQUIP:縄
		TEQUIP:縄 = 1
ELSE
	TEQUIP:三角木馬 = 0
ENDIF


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 100
LOSEBASE:気力 += 80

SOURCE:快Ｃ += 20

IF PENIS(TARGET)
	SOURCE:痛み += 2000
ELSE
	SOURCE:痛み += 3500
ENDIF
;着衣のとき、痛みのソースが減少
IF BOTTOMS(TARGET) >= 4
	TIMES SOURCE:痛み , 0.70
ELSEIF TEQUIP:下着（下） && TEQUIP:下着（下） != 5
	TIMES SOURCE:痛み , 0.90
ENDIF

SOURCE:恐れ += 4000
;地下室にいると恐れのソース追加
SIF TEQUIP:地下室
	TIMES SOURCE:恐れ , 1.50

SOURCE:逸脱 += 350
SOURCE:反発 += 1000


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;ゲイ経験とか加算
CALL COM_EXP(1)

;依存度ベクトル
TFLAG:33 = 5

;依存度補正値(服従で1、隷属で2）
IF TALENT:服従 && ASSIPLAY == 0
	TFLAG:30 += 2
ELSEIF TALENT:隷属 && ASSIPLAY == 0
	TFLAG:30 += 4
ENDIF


RETURN 1



;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM145
;三角木馬騎乗中
PRINTL ＜三角木馬騎乗中＞

LOSEBASE:体力 += 30
LOSEBASE:気力 += 30

SOURCE:痛み += 1000
;地下室にいると苦痛のソース追加
SIF TEQUIP:地下室
	TIMES SOURCE:痛み , 1.50

SOURCE:恐れ += 800
SOURCE:逸脱 += 150
SOURCE:反発 += 500



RETURN 1

