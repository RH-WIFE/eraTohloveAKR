;噴乳中毒LVUP判定
@DECIDE_ABLUP19
;条件別にＯＫかダメかを記録する
I = 0
;能力アップ可能なら1にする
Z = 0

IF ABL:噴乳中毒 == 0
	A = 2500
	B = 6000
	C = 1000
	D = 10
ELSEIF ABL:噴乳中毒 == 1
	A = 5000
	B = 14000
	C = 2500
	D = 25
ELSEIF ABL:噴乳中毒 == 2
	A = 9000
	B = 27000
	C = 4800
	D = 80
ELSEIF ABL:噴乳中毒 == 3
	A = 17000
	B = 65000
	C = 10000
	D = 150
ELSEIF ABL:噴乳中毒 == 4
	A = 30000
	B = 80000
	C = 25000
	D = 250
ELSEIF ABL:噴乳中毒 == 5
	A = 35000
	B = 100000
	C = 30000
	D = 350
ELSEIF ABL:噴乳中毒 == 6
	A = 40000
	B = 120000
	C = 35000
	D = 500
ELSEIF ABL:噴乳中毒 == 7
	A = 45000
	B = 140000
	C = 40000
	D = 600
ELSEIF ABL:噴乳中毒 == 8
	A = 50000
	B = 160000
	C = 45000
	D = 700
ELSEIF ABL:噴乳中毒 == 9
	A = 60000
	B = 200000
	C = 50000
	D = 800
ENDIF

;一線越えない
IF TALENT:一線越えない && (TALENT:恋慕 == 0 && TALENT:淫乱 == 0 && TALENT:服従 == 0 && TALENT:親愛 == 0 && TALENT:娼婦 == 0 && TALENT:隷属 == 0)
	TIMES A , 2.00
	TIMES B , 2.00
	TIMES C , 2.00
	TIMES D , 2.00
ENDIF
;中毒しやすい
IF TALENT:中毒しやすい
	TIMES A , 0.50
	TIMES B , 0.50
	TIMES C , 0.50
	TIMES D , 0.50
ENDIF
;貧乳
IF TALENT:貧乳
	TIMES B , 0.90
ENDIF
;胸がない
IF BREAST(TARGET)
	TIMES B , 0.70
ENDIF
;巨乳
IF TALENT:巨乳
	TIMES B , 1.10
ENDIF
;爆乳
IF TALENT:爆乳
	TIMES B , 1.30
ENDIF

;ＬＶ２から３に上げるときは異常経験必要（素質：[中毒しやすい][淫乳]なら無視できる）
IF ABL:噴乳中毒 == 2 && TALENT:中毒しやすい == 0 && TALENT:淫乳 == 0
	IF EXP:異常経験 == 0
		;異常経験が不足
		I |= 2
		J |= 2
	ENDIF
;ＬＶ３から４に上げるときは異常経験2以上必要（素質：[中毒しやすい][淫乳]なら無視できる）
ELSEIF ABL:噴乳中毒 == 3 && TALENT:中毒しやすい == 0 && TALENT:淫乳 == 0
	IF EXP:異常経験 < 2
		;異常経験が不足
		I |= 2
		J |= 2
	ENDIF
;ＬＶ４から５に上げるときは異常経験3以上必要（素質：[中毒しやすい][淫乳]なら無視できる）
ELSEIF ABL:噴乳中毒 == 4 && TALENT:中毒しやすい == 0 && TALENT:淫乳 == 0
	IF EXP:異常経験 < 3
		;異常経験が不足
		I |= 2
		J |= 2
	ENDIF
;ＬＶ８から９に上げるときは異常経験7以上必要（素質：[中毒しやすい][淫乳]なら無視できる）
ELSEIF ABL:噴乳中毒 == 8 && TALENT:中毒しやすい == 0 && TALENT:淫乳 == 0
	IF EXP:異常経験 < 7
		;異常経験が不足
		I |= 2
		J |= 2
	ENDIF
ENDIF

;B感覚が必要
IF ABL:Ｂ感覚 < ABL:噴乳中毒 + 1
	I |= 4
	J |= 4
ENDIF

;欲情の珠で上げる
