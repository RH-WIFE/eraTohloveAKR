;精液中毒LVUP判定
@DECIDE_ABLUP16
;条件別にＯＫかダメかを記録する
;精飲絶頂経験の処理用にKを追加
I = 0
J = 0
K = 0
;能力アップ可能なら1にする
Z = 0

;精飲絶頂経験を利用してのレベルアップに必要なカウントを以下に設定
	;D = 欲情の珠
	;E = 屈服の珠
	;精液経験は従来通りのCを参照
	;G = 精飲絶頂経験の回数

IF ABL:精液中毒 == 0
	A = 3000
	B = 10000
	C = 10
ELSEIF ABL:精液中毒 == 1
	A = 8000
	B = 25000
	C = 25
ELSEIF ABL:精液中毒 == 2
	A = 15000
	B = 50000
	C = 40
ELSEIF ABL:精液中毒 == 3
	A = 30000
	B = 100000
	C = 80
	D = 10000
	E = 25000
	G = 50
ELSEIF ABL:精液中毒 == 4
	A = 55000
	B = 300000
	C = 200
	D = 30000
	E = 75000
	G = 100
ELSEIF ABL:精液中毒 == 5
	A = 60000
	B = 350000
	C = 250
	D = 35000
	E = 85000
	G = 120
ELSEIF ABL:精液中毒 == 6
	A = 65000
	B = 400000
	C = 300
	D = 40000
	E = 100000
	G = 150
ELSEIF ABL:精液中毒 == 7
	A = 70000
	B = 450000
	C = 350
	D = 45000
	E = 120000
	G = 180
ELSEIF ABL:精液中毒 == 8
	A = 75000
	B = 500000
	C = 400
	D = 50000
	E = 120000
	G = 200
ELSEIF ABL:精液中毒 == 9
	A = 90000
	B = 650000
	C = 500
	D = 65000
	E = 150000
	G = 250
ENDIF

;一線越えない
IF TALENT:一線越えない && (TALENT:恋慕 == 0 && TALENT:淫乱 == 0 && TALENT:服従 == 0 && TALENT:親愛 == 0 && TALENT:娼婦 == 0 && TALENT:隷属 == 0)
	TIMES A , 2.00
	TIMES B , 2.00
	TIMES C , 2.00
ENDIF
;メシマズ
IF TALENT:メシマズ
	TIMES A , 0.90
	TIMES B , 0.90
ENDIF
;料理上手
IF TALENT:料理上手
	TIMES A , 1.10
	TIMES B , 1.10
ENDIF
;中毒しやすい
IF TALENT:中毒しやすい
	TIMES A , 0.50
	TIMES B , 0.50
	TIMES C , 0.50
	TIMES D , 0.50
ENDIF

;ＬＶ２から３に上げるときは異常経験必要（素質：[汚臭鈍感][汚れ無視][中毒しやすい]なら無視できる）
IF ABL:精液中毒 == 2 && TALENT:汚臭鈍感 == 0 && TALENT:汚れ無視 == 0 && TALENT:中毒しやすい == 0
	IF EXP:異常経験 == 0
		;異常経験が不足
		I |= 2
		J |= 2
		K |= 2
	ENDIF
;ＬＶ３から４に上げるときは異常経験2以上必要（素質：[汚臭鈍感][汚れ無視][中毒しやすい]なら無視できる）
ELSEIF ABL:精液中毒 == 3 && TALENT:汚臭鈍感 == 0 && TALENT:汚れ無視 == 0 && TALENT:中毒しやすい == 0
	IF EXP:異常経験 < 2
		;異常経験が不足
		I |= 2
		J |= 2
		K |= 2
	ENDIF
;ＬＶ４から５に上げるときは異常経験3以上必要（素質：[汚臭鈍感][汚れ無視][中毒しやすい]なら無視できる）
ELSEIF ABL:精液中毒 == 4 && TALENT:汚臭鈍感 == 0 && TALENT:汚れ無視 == 0 && TALENT:中毒しやすい == 0
	IF EXP:異常経験 < 3
		;異常経験が不足
		I |= 2
		J |= 2
		K |= 2
	ENDIF
;ＬＶ８から９に上げるときは異常経験7以上必要（素質：[汚臭鈍感][汚れ無視][中毒しやすい]なら無視できる）
ELSEIF ABL:精液中毒 == 8 && TALENT:汚臭鈍感 == 0 && TALENT:汚れ無視 == 0 && TALENT:中毒しやすい == 0
	IF EXP:異常経験 < 7
		;異常経験が不足
		I |= 2
		J |= 2
		K |= 2
	ENDIF
