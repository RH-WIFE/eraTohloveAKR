ELSEIF ABL:マゾっ気 == 9
	A = 0
	B = 0
	C = 350
	D = 30000
	E = 40000
ENDIF

;一線越えない
IF TALENT:一線越えない && (TALENT:恋慕 == 0 && TALENT:淫乱 == 0 && TALENT:服従 == 0 && TALENT:親愛 == 0 && TALENT:娼婦 == 0 && TALENT:隷属 == 0)
	TIMES A , 2.00
	TIMES B , 2.00
	TIMES C , 2.00
	TIMES D , 2.00
	TIMES E , 2.00
ENDIF
;マゾ
IF TALENT:マゾ
	TIMES A , 0.50
	TIMES B , 0.50
	TIMES C , 0.50
	TIMES D , 0.50
	TIMES E , 0.50
ENDIF


;ＬＶ３から４に上げるときは異常経験必要（素質：[解放]なら無視できる）
IF ABL:マゾっ気 == 3 && TALENT:解放 == 0
	IF EXP:異常経験 == 0
		;異常経験が不足
		I |= 2
		J |= 2
	ENDIF
;ＬＶ４から５に上げるときは異常経験3以上必要（素質：[解放]なら無視できる）
ELSEIF ABL:マゾっ気 == 4 && TALENT:解放 == 0
	IF EXP:異常経験 < 3
		;異常経験が不足
		I |= 2
		J |= 2
	ENDIF
;ＬＶ８から９に上げるときは異常経験5以上必要（素質：[解放]なら無視できる）
ELSEIF ABL:マゾっ気 == 8 && TALENT:解放 == 0
	IF EXP:異常経験 < 5
		;異常経験が不足
		I |= 2
		J |= 2
	ENDIF
ENDIF

IF B > 0
	;苦痛の珠で上げる
	SIF JUEL:苦痛 < A
		I |= 1
	;欲情の珠で上げる
	SIF JUEL:欲情 < B
		I |= 1

	IF I == 0
		Z = 1
	ENDIF
ELSE
	I = 256
ENDIF

IF D > 0
	;苦痛の珠で上げる
	SIF JUEL:苦痛 < D
		J |= 1
	;屈服の珠で上げる
	SIF JUEL:屈服 < E
		J |= 1
	;この場合苦痛快楽経験が必要なことあり
	SIF EXP:苦痛快楽経験 < C
		J |= 2
	;この場合絶頂経験が１以上必要
	SIF EXP:絶頂経験 < 1
		J |= 2
	
	IF J == 0
		Z = 1
	ENDIF
ELSE
	J = 256
ENDIF
RETURN 1

