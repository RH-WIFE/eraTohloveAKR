;マゾっ気LVUP判定
@DECIDE_ABLUP9
;条件別にＯＫかダメかを記録する
I = 0
J = 0
;能力アップ可能なら1にする
Z = 0

IF ABL:マゾっ気 == 0
	A = 100
	B = 100
	C = 0
	D = 100
	E = 100
ELSEIF ABL:マゾっ気 == 1
	A = 500
	B = 500
	C = 0
	D = 500
	E = 300
ELSEIF ABL:マゾっ気 == 2
	A = 1200
	B = 1000
	C = 0
	D = 1500
	E = 1000
ELSEIF ABL:マゾっ気 == 3
	A = 0
	B = 0
	C = 10
	D = 3000
	E = 6000
ELSEIF ABL:マゾっ気 == 4
	A = 0
	B = 0
	C = 50
	D = 5000
	E = 12000
ELSEIF ABL:マゾっ気 == 5
	A = 0
	B = 0
	C = 100
	D = 8000
