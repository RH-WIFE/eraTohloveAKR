;能力アップ可能なら1にする
Z = 0

IF ABL:レズ中毒 == 0
	A = 3000
	B = 10000
	C = 1000
ELSEIF ABL:レズ中毒 == 1
	A = 8000
	B = 25000
	C = 1500
ELSEIF ABL:レズ中毒 == 2
	A = 15000
	B = 50000
	C = 2000
ELSEIF ABL:レズ中毒 == 3
	A = 30000
	B = 100000
	C = 4500
ELSEIF ABL:レズ中毒 == 4
	A = 55000
	B = 300000
	C = 6000
ELSEIF ABL:レズ中毒 == 5
	A = 60000
	B = 350000
	C = 6500
ELSEIF ABL:レズ中毒 == 6
	A = 65000
	B = 400000
	C = 7000
ELSEIF ABL:レズ中毒 == 7
	A = 70000
	B = 450000
	C = 7500
ELSEIF ABL:レズ中毒 == 8
	A = 75000
	B = 500000
	C = 8000
ELSEIF ABL:レズ中毒 == 9
	A = 80000
	B = 550000
	C = 9000
ENDIF

;一線越えない
IF TALENT:一線越えない && (TALENT:恋慕 == 0 && TALENT:淫乱 == 0 && TALENT:服従 == 0 && TALENT:親愛 == 0 && TALENT:娼婦 == 0 && TALENT:隷属 == 0)
	TIMES A , 2.00
	TIMES B , 2.00
	TIMES C , 2.00
ENDIF
;中毒しやすい
IF TALENT:中毒しやすい
	TIMES A , 0.50
	TIMES B , 0.50
	TIMES C , 0.50
ENDIF

;ＬＶ２から３に上げるときは異常経験必要（素質：[両刀][中毒しやすい]なら無視できる）
IF ABL:レズ中毒 == 2 && TALENT:両刀 == 0 && TALENT:中毒しやすい == 0
	IF EXP:異常経験 == 0
		;異常経験が不足
		I |= 2
		J |= 2
	ENDIF
;ＬＶ３から４に上げるときは異常経験2以上必要（素質：[両刀][中毒しやすい]なら無視できる）
ELSEIF ABL:レズ中毒 == 3 && TALENT:両刀 == 0 && TALENT:中毒しやすい == 0
	IF EXP:異常経験 < 2
		;異常経験が不足
		I |= 2
		J |= 2
	ENDIF
;ＬＶ４から５に上げるときは異常経験3以上必要（素質：[両刀][中毒しやすい]なら無視できる）
ELSEIF ABL:レズ中毒 == 4 && TALENT:両刀 == 0 && TALENT:中毒しやすい == 0
	IF EXP:異常経験 < 3
		;異常経験が不足
		I |= 2
		J |= 2
	ENDIF
;ＬＶ８から９に上げるときは異常経験7以上必要（素質：[両刀][中毒しやすい]なら無視できる）
ELSEIF ABL:レズ中毒 == 8 && TALENT:両刀 == 0 && TALENT:中毒しやすい == 0
	IF EXP:異常経験 < 7
		;異常経験が不足
		I |= 2
		J |= 2
	ENDIF
ENDIF

;レズっ気
IF ABL:レズっ気 < ABL:レズ中毒 + 1
	I |= 4
	J |= 4
ENDIF

;快Cの珠で上げる
SIF JUEL:快Ｃ < B
	I |= 1
;欲情の珠で上げる
SIF JUEL:欲情 < A
	I |= 1
;屈服の珠で上げる
