	N = COUNT
	IF CFLAG:N:41 == NO:TARGET && CFLAG:N:1 == 3
		CFLAG:N:41 = -1
		CFLAG:N:40 = 0
	ENDIF
REND


;共犯者の執心対象セット
@YEARN_FOR
;マスターの行った調教を算出する
A = 0
B = 0
C = 1099 + NO:MASTER
D = 0
;ターゲットの、マスターからの調教経験が1000以上でないとダメ
SIF CFLAG:TARGET:C < 1000
	RETURN
;すでに執着固定したキャラがいる（プロミスリングを贈っている）とダメ
SIF CFLAG:MASTER:140
	RETURN
REPEAT CHARANUM
	B = COUNT
	A += CFLAG:B:C
REND
D = A
;全調教経験の70%以上を占めると執心対象としてセットされる
TIMES A , 0.7
;全調教経験の50%以下になると執心対象が解除される
TIMES D , 0.50
B = -100 - (NO:TARGET)
;ターゲットに対しての調教が、マスターが行った全調教の70%以上である
IF A < CFLAG:TARGET:C && CFLAG:MASTER:41 <= 0 && CFLAG:MASTER:41 != B
	PRINTFORMW ……%CALLNAME%を見ていると、%CALLNAME:MASTER%の心は何故か騒ぐようだ
	PRINTL 
	PRINTL [0]思い過ごしだ
	PRINTL [1]認める
	$INPUT_LOOP
	INPUT
	;セットしないと、-(100+キャラ番号)が代入されて続けて同じキャラに選択肢が出ないようになる
	IF RESULT == 0
		PRINTFORMW %CALLNAME:MASTER%はその感情を忘れることにした……
		CFLAG:MASTER:41 = B
	;セットすると、キャラ番号が代入されて以降執心対象として扱われる（思慕・畏怖対象と扱いは同様）
	ELSEIF RESULT == 1
		PRINTFORMW %CALLNAME:MASTER%はその感情を認めることにした……
		CFLAG:MASTER:41 = NO:TARGET
		CFLAG:MASTER:40 = 1
		CFLAG:MASTER:39 = 6
		;調教者変更用の
		IF CFLAG:TARGET:39 == 6 && CFLAG:TARGET:41 == NO:MASTER && TALENT:MASTER:相愛 == 0 && TALENT:相愛 == 0
			PRINTL 
			TFLAG:13 = 53
			CALL KOJO_MESSAGE_EVENT
			SIF TARGET < 0
				RETURN 0
			PRINTFORMW %NAME:MASTER%と%NAME:TARGET%は【相愛】になった
			TALENT:MASTER:相愛 = 1
			TALENT:相愛 = 1
			CFLAG:39 = 165
			CFLAG:MASTER:39 = 165
		ENDIF
	ELSE
		GOTO INPUT_LOOP
	ENDIF
ELSEIF D > CFLAG:TARGET:C && CFLAG:MASTER:41 == NO:TARGET && CFLAG:MASTER:1 == 3
	PRINTFORMW %CALLNAME:MASTER%は%CALLNAME%への執心を失った……
	CFLAG:MASTER:41 = -1
	CFLAG:MASTER:40 = 0
	;調教者変更用の
	IF CFLAG:TARGET:39 == 165 && CFLAG:TARGET:41 == NO:MASTER && TALENT:MASTER:相愛 && TALENT:相愛 
		PRINTL 
		SIF TARGET < 0
			RETURN 0
		PRINTFORMW %NAME:MASTER%と%NAME:TARGET%は【相愛】を失った
		TALENT:MASTER:相愛 = 0
		TALENT:相愛 = 0
		CFLAG:39 = 6
		CFLAG:MASTER:39 = 0
	ENDIF
ENDIF

