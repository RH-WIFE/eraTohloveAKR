M = 0
N = 0
O = 0
P = 0
Q = 0
R = 0
REPEAT CHARANUM
	N = COUNT
	IF CFLAG:N:41 == NO:TARGET && (CFLAG:N:39 == 3 || CFLAG:N:39 == 6 || CFLAG:N:39 == 165 || CFLAG:N:39 == 5 || CFLAG:N:39 == 8)
		P += 1
