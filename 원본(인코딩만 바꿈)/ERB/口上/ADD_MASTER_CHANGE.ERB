		ELSEIF CFLAG:N:39 == 5
			CFLAG:N:10 += 10
		ELSEIF CFLAG:N:39 == 6
			CFLAG:N:10 += 50
		ELSEIF CFLAG:N:39 == 165
			CFLAG:N:10 += 70
		ELSEIF CFLAG:N:39 == 8
			CFLAG:N:10 += 20
		ENDIF
		SIF CFLAG:N:10 > 99
			CFLAG:N:10 = 99
		SIF CFLAG:M:10 < CFLAG:N:10
			M = N
	ENDIF
REND
;売却キャラに思慕を寄せているキャラにストレス値加算
IF P
	PRINTL 
	PRINTFORM %CALLNAME%と仲の良かった%CALLNAME:M%
	SIF P > 1
		PRINT 達
	PRINTW の様子がおかしい
	PRINTFORM %CALLNAME%が売却されたという事実に、%CALLNAME:M%
