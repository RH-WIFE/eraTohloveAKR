;================================================================================================
;調教者変更機能用の関数群です
;CFLAG:39～41を利用しています
;================================================================================================

;思慕・畏怖対象の登録番号を調べる
;Rに検索対象の登録番号を代入してCALL
;思慕・畏怖対象のキャラ固有番号を「M」に、陥落素質を「N」に返す（【相愛】の場合はLに1を返します）
;また、未陥落時には直前の調教者のキャラ固有番号を「M」に返す(Nは-1となるので未陥落分岐出来ます)
;登録番号が分からない時は先にぱんくしょんの「CALL NO」などで調べてください
;失意/崩壊の場合「N」に以前の陥落素質が入る
@MASTER_SEARCH
M = -1
N = -1
L = -1
SIF R < 0 || R > CHARANUM
	RETURN
;未陥落時/淫乱ルートは「直前の調教者」をMに返す
IF !CFLAG:R:40
	SIF CFLAG:R:41 < -99
		M = (CFLAG:R:41 + 100) * -1
	SIF CFLAG:R:39 > 0
		N = CFLAG:R:39
ELSE
	N = CFLAG:R:39
	SIF CFLAG:R:39 == 165
		L = 1
	M = CFLAG:R:41
ENDIF

@EVENTTRAIN
IF TARGET > -1
	CALL MASTER_CHANGE_ON
	;未陥落時/淫乱ルート
	IF !CFLAG:40
		M = -100 - (NO:MASTER)
		IF CFLAG:41 != M
			;前回調教者と主人が変わると依存度補正
			IF CFLAG:2 > 0
				;EASYで変動無し、NOMALで小変動、HARDで変動
				IF FLAG:4 == 2
					CFLAG:2 -= 20
				ELSEIF FLAG:4 == 3
					CFLAG:2 -= 50
				ENDIF
				SIF CFLAG:2 < 0
					CFLAG:2 = 0
			ELSEIF CFLAG:2 < 0
				;EASYで変動無し、NOMALで小変動、HARDで変動
				IF FLAG:4 == 2
					CFLAG:2 += 20
				ELSEIF FLAG:4 == 3
					CFLAG:2 += 50
				ENDIF
				SIF CFLAG:2 > 0
					CFLAG:2 = 0
			ENDIF
		ENDIF
	ENDIF
	;もし記録されている思慕・畏怖対象が現在のマスターではない場合、一時的に解除
	CALL MASTER_CHANGE_OFF
	;被調教経験の合計からマスター調教の経験を引いて助手調教経験を算出
	A = 0
	REPEAT 500
		B = COUNT + 1099
		A += CFLAG:B
	REND
	M = NO:MASTER + 1099
	A -= CFLAG:M
	;従順5以上で失意がなくなる
	IF TALENT:失意 && ABL:従順 > 4
		PRINTFORMW %CALLNAME:TARGET%は少しずつ心の傷を癒しているようだ……
		PRINTFORMW %CALLNAME:TARGET%は【失意】の状態から抜け出した
		TALENT:失意 = 0
	;失意の値が偶数のとき、依存値変動幅900以上or淫乱条件で失意が軽くなる
	;理論上、別の処理で失意の値が変動しない限り一回しか表示されなくなるはず
	ELSEIF TALENT:失意 && (TALENT:失意 % 2) == 0 && (CFLAG:2 > 900 || CFLAG:2 < -900 || ((ABL:欲望 >= 3 && ABL:Ｃ感覚+ABL:Ｖ感覚+ABL:Ａ感覚+ABL:Ｂ感覚 >= 10 && MARK:快楽刻印 == 3 && MARK:屈服刻印 == 3 && MARK:反発刻印 == 0 && EXP:絶頂経験 >= 50) && (EXP:異常経験 >= 3 || (EXP:異常経験 >= 1 && A >= 1000) || A >= 2000)))
		PRINTFORMW %CALLNAME:TARGET%は少しずつ心の傷を癒しているようだ……
		TALENT:失意 /= 2
	ENDIF
ENDIF


;調教終了後、再び思慕・畏怖付与（再取得防止）
@EVENTTURNEND
#PRI
CALL MASTER_CHANGE_ON
IF TARGET > -1
	SIF !CFLAG:40
		CFLAG:41 = -100 - (NO:MASTER)
ENDIF

;日付変更イベント終了後、再び思慕・畏怖付与
@EVENTSHOP
CALL MASTER_CHANGE_ON

@MASTER_CHANGE_ON
IF TARGET > -1
	IF TALENT:崩壊 || TALENT:失意
		CFLAG:41 = -1
		CFLAG:40 = 0
	ENDIF
	IF CFLAG:40 && !TALENT:恋慕 && !TALENT:服従 && !TALENT:親愛 && !TALENT:隷属
		;相愛のときの処理
		IF CFLAG:39 == 165
			TALENT:相愛 = 1
			TALENT:親愛 = 1
		ELSE
			TALENT:(CFLAG:39) = 1
		ENDIF
	ENDIF
ENDIF
;調教者の方の相愛判定
IF CFLAG:MASTER:39 == 165
	TALENT:MASTER:相愛 = 1
	TALENT:MASTER:親愛 = 1
ENDIF

@MASTER_CHANGE_OFF
IF TARGET > -1
	;崩壊、失意
	IF TALENT:崩壊 || TALENT:失意
		CFLAG:41 = -1
		CFLAG:40 = 0
	ENDIF
	LOCAL = CFLAG:41
	IF NO:MASTER != LOCAL
		TALENT:恋慕 = 0
		TALENT:服従 = 0
		TALENT:親愛 = 0
		TALENT:隷属 = 0
		TALENT:相愛 = 0
	ENDIF
ENDIF
;調教者の方の相愛判定
IF TARGET > -1
	IF CFLAG:MASTER:41 != NO:TARGET && TALENT:MASTER:相愛
		TALENT:MASTER:相愛 = 0
		TALENT:MASTER:親愛 = 0
	ENDIF
ENDIF

