	N = COUNT
	IF CFLAG:N:41 == NO:TARGET && (CFLAG:N:39 == 3 || CFLAG:N:39 == 6 || CFLAG:N:39 == 165 || CFLAG:N:39 == 5 || CFLAG:N:39 == 8)
		PRINTFORM %CALLNAME:N%は【
		IF CFLAG:N:39 == 3
			PRINT 恋慕
			M = 23
		ELSEIF CFLAG:N:39 == 5
			PRINT 服従
			M = 15
		ELSEIF CFLAG:N:39 == 6
			PRINT 親愛
			M = 54
		ELSEIF CFLAG:N:39 == 165
			PRINT 相愛
			M = 54
		ELSEIF CFLAG:N:39 == 8
			PRINT 隷属
