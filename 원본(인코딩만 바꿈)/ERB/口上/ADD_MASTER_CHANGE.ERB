		M = TARGET
		TARGET = LOCAL
		ASSI = LOCAL:1
		;お守りがあれば復活
		IF CFLAG:M:693 || CFLAG:M:694
			TFLAG:13 = 72
			CALL KOJO_MESSAGE_EVENT
			IF CFLAG:M:694
				CFLAG:M:10 = 0
